    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/victorykit.git",
    "directory": "backend/tools/37-dnsfirewall/api"
  },
  "bugs": {
    "url": "https://github.com/your-org/victorykit/issues"
