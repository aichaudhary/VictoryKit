# ============================================
# BotDefender API Configuration
# Tool 23 - Bot Detection & Mitigation Platform
# ============================================

# Server Configuration
PORT=4023
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/victorykit_botdefender

# JWT Secret for API Authentication
JWT_SECRET=your-jwt-secret-key-here

# ===========================================
# CAPTCHA & Challenge Services
# ===========================================

# Google reCAPTCHA v3 (Invisible bot detection)
# Get keys at: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key
RECAPTCHA_SCORE_THRESHOLD=0.5

# hCaptcha (Privacy-focused alternative)
# Get keys at: https://dashboard.hcaptcha.com
HCAPTCHA_SITE_KEY=your-hcaptcha-site-key
HCAPTCHA_SECRET_KEY=your-hcaptcha-secret-key

# Cloudflare Turnstile (Free CAPTCHA alternative)
# Get keys at: https://dash.cloudflare.com/turnstile
TURNSTILE_SITE_KEY=your-turnstile-site-key
TURNSTILE_SECRET_KEY=your-turnstile-secret-key

# ===========================================
# IP Intelligence & Reputation Services
# ===========================================

# IPQualityScore (IP fraud detection)
# Get API key at: https://www.ipqualityscore.com
IPQUALITYSCORE_API_KEY=your-ipqualityscore-api-key
IPQUALITYSCORE_STRICTNESS=1

# AbuseIPDB (IP abuse reports)
# Get API key at: https://www.abuseipdb.com
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# MaxMind GeoIP2 (Geolocation & proxy detection)
# Get credentials at: https://www.maxmind.com/en/account
MAXMIND_ACCOUNT_ID=your-maxmind-account-id
MAXMIND_LICENSE_KEY=your-maxmind-license-key

# IPInfo.io (IP geolocation & VPN detection)
# Get token at: https://ipinfo.io/account/token
IPINFO_TOKEN=your-ipinfo-token

# ===========================================
# Device Fingerprinting Services
# ===========================================

# FingerprintJS Pro (Advanced browser fingerprinting)
# Get API key at: https://fingerprint.com
FINGERPRINTJS_API_KEY=your-fingerprintjs-api-key
FINGERPRINTJS_REGION=us

# BotD by FingerprintJS (Open-source bot detection)
# No API key needed for basic usage, Pro requires key
BOTD_API_KEY=your-botd-api-key

# ===========================================
# Threat Intelligence Feeds
# ===========================================

# Spamhaus (Blocklist lookup)
# Get access at: https://www.spamhaus.org
SPAMHAUS_DQS_KEY=your-spamhaus-dqs-key

# Shodan (Internet scanning data)
# Get API key at: https://account.shodan.io
SHODAN_API_KEY=your-shodan-api-key

# GreyNoise (Internet scanning intelligence)
# Get API key at: https://www.greynoise.io
GREYNOISE_API_KEY=your-greynoise-api-key

# ===========================================
# Internal Services
# ===========================================

# ML Engine URL (internal bot detection ML model)
ML_ENGINE_URL=http://localhost:8023

# Redis for rate limiting and caching
REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WS_PORT=4123
WS_HEARTBEAT_INTERVAL=30000

# ===========================================
# Detection Thresholds
# ===========================================

# Bot score thresholds (0-100)
BOT_SCORE_THRESHOLD_ALLOW=20
BOT_SCORE_THRESHOLD_CHALLENGE=50
BOT_SCORE_THRESHOLD_BLOCK=80

# Rate limiting defaults
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# Logging & Monitoring
# ===========================================

LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Webhook for alerts
ALERT_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
