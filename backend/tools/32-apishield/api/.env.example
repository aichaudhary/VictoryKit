# ===========================================
# APIShield - API Security Testing Platform
# Environment Configuration
# ===========================================

# Server Configuration
PORT=4032
NODE_ENV=development

# MongoDB Connection
# Get MongoDB Atlas: https://www.mongodb.com/cloud/atlas
MONGODB_URI=mongodb://localhost:27017/victorykit_apishield

# JWT Secret for Token Testing
# Generate: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-for-token-testing

# ===========================================
# Third-Party API Security Tools
# ===========================================

# OWASP ZAP API
# Download: https://www.zaproxy.org/download/
# Start ZAP in daemon mode: zap.sh -daemon -port 8080
OWASP_ZAP_API_KEY=your-zap-api-key
OWASP_ZAP_URL=http://localhost:8080

# Burp Suite Enterprise API
# Get API Key: https://portswigger.net/burp/enterprise
BURP_ENTERPRISE_API_KEY=
BURP_ENTERPRISE_URL=https://burp.yourcompany.com/api

# PortSwigger BAPI (Burp API)
# Documentation: https://portswigger.net/burp/documentation/desktop/extensions/creating/api
PORTSWIGGER_API_KEY=

# Nuclei Templates
# GitHub: https://github.com/projectdiscovery/nuclei-templates
NUCLEI_TEMPLATES_PATH=/opt/nuclei-templates
NUCLEI_BINARY_PATH=/usr/local/bin/nuclei

# Swagger/OpenAPI Parser
# Swagger Hub API: https://app.swaggerhub.com/settings/apiKey
SWAGGERHUB_API_KEY=

# Postman API
# Get API Key: https://web.postman.co/settings/me/api-keys
POSTMAN_API_KEY=

# ===========================================
# AI-Powered Security Analysis
# ===========================================

# OpenAI for Smart Payload Generation
# Get API Key: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# GitHub Copilot for Code Analysis
# Token: https://github.com/settings/tokens
GITHUB_TOKEN=

# ===========================================
# Rate Limiting & Testing
# ===========================================

# Max requests per minute for fuzzing
MAX_FUZZ_REQUESTS_PER_MINUTE=100

# Concurrent scan threads
MAX_CONCURRENT_SCANS=5

# Request timeout (ms)
REQUEST_TIMEOUT=30000

# ===========================================
# Webhook & Notifications
# ===========================================

# Slack Webhook for Alerts
# Create: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Discord Webhook
# Create: https://discord.com/developers/docs/resources/webhook
DISCORD_WEBHOOK_URL=

# ===========================================
# CI/CD Integration
# ===========================================

# GitHub Actions Integration
GITHUB_ACTIONS_TOKEN=

# GitLab CI Integration
GITLAB_CI_TOKEN=

# Jenkins Integration
JENKINS_URL=
JENKINS_API_TOKEN=

# ===========================================
# Feature Flags
# ===========================================

ENABLE_FUZZING=true
ENABLE_AUTH_TESTING=true
ENABLE_GRAPHQL_TESTING=true
ENABLE_RATE_LIMIT_TESTING=true
ENABLE_AI_PAYLOADS=false
