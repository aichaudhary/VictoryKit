# ==========================================
# DataGuardian - Tool 10 - Environment Config
# Personal Data Protection Hub
# https://dataguardian.maula.ai
# ==========================================

# Server Configuration
NODE_ENV=production
PORT=4010
HOST=0.0.0.0

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/dataguardian_db
MONGODB_DB_NAME=dataguardian_db

# JWT Authentication
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRY=24h

# ==========================================
# BREACH CHECK APIs
# ==========================================

# HaveIBeenPwned API (Primary)
# Get key at: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=your_hibp_api_key_here
HIBP_API_URL=https://haveibeenpwned.com/api/v3
HIBP_USER_AGENT=DataGuardian-MaulaAI

# Pwned Passwords API (Free - uses k-Anonymity)
PWNED_PASSWORDS_URL=https://api.pwnedpasswords.com/range

# ==========================================
# DARK WEB MONITORING APIs
# ==========================================

# SpyCloud API (Premium Dark Web Monitoring)
# Get key at: https://spycloud.com
SPYCLOUD_API_KEY=your_spycloud_api_key_here
SPYCLOUD_API_URL=https://api.spycloud.io/v2

# Dehashed API (Alternative Breach Search)
# Get key at: https://dehashed.com
DEHASHED_API_KEY=your_dehashed_api_key_here
DEHASHED_EMAIL=your_dehashed_email_here
DEHASHED_API_URL=https://api.dehashed.com/search

# Intelligence X API (Dark Web Search)
# Get key at: https://intelx.io
INTELLIGENCE_X_API_KEY=your_intelx_api_key_here
INTELLIGENCE_X_URL=https://2.intelx.io

# ==========================================
# DIGITAL FOOTPRINT APIs
# ==========================================

# FullContact API (Digital Identity)
# Get key at: https://fullcontact.com
FULLCONTACT_API_KEY=your_fullcontact_api_key_here

# Pipl API (People Search)
# Get key at: https://pipl.com
PIPL_API_KEY=your_pipl_api_key_here

# Clearbit API (Company/Person Data)
# Get key at: https://clearbit.com
CLEARBIT_API_KEY=your_clearbit_api_key_here

# ==========================================
# RATE LIMITING
# ==========================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BREACH_CHECK=10
RATE_LIMIT_PASSWORD_CHECK=50

# ==========================================
# SECURITY
# ==========================================

# Encryption for stored emails (AES-256)
ENCRYPTION_KEY=your_32_char_encryption_key_here
ENCRYPTION_IV=your_16_char_iv_here

# CORS Settings
CORS_ORIGIN=https://dataguardian.maula.ai,https://maula.ai
CORS_METHODS=GET,POST,OPTIONS

# ==========================================
# LOGGING & MONITORING
# ==========================================

LOG_LEVEL=info
LOG_FORMAT=json

# Sentry Error Tracking (Optional)
SENTRY_DSN=

# ==========================================
# CACHE SETTINGS
# ==========================================

# Redis (for caching breach data)
REDIS_URL=redis://localhost:6379
REDIS_CACHE_TTL=3600

# Breach data cache duration (seconds)
BREACH_CACHE_TTL=86400
FOOTPRINT_CACHE_TTL=604800

# ==========================================
# EMAIL NOTIFICATIONS (Optional)
# ==========================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=DataGuardian <noreply@maula.ai>

# ==========================================
# MAULA.AI INTEGRATION
# ==========================================

MAULA_API_URL=https://api.maula.ai
MAULA_CALLBACK_URL=https://dataguardian.maula.ai/callback
