# ═══════════════════════════════════════════════════════════════════════════════
# APPLICATION CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# Node Environment
NODE_ENV=development
# Options: development, staging, production, test

# Application Identity
APP_NAME=riskquantify
APP_DISPLAY_NAME=RiskQuantify
APP_VERSION=19.1.0
APP_DESCRIPTION=IP Risk Scanner & Payment Sandbox Platform

# Server Configuration
PORT=4019
HOST=0.0.0.0
API_PREFIX=/api/v1

# Frontend Configuration
FRONTEND_PORT=3019
FRONTEND_URL=http://localhost:3019
# Production: https://riskquantify.maula.ai

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3019,http://localhost:3000,https://riskquantify.maula.ai,https://maula.ai
CORS_CREDENTIALS=true

# Trust Proxy (for reverse proxy setups)
TRUST_PROXY=true

# ═══════════════════════════════════════════════════════════════════════════════
# DATABASE CONFIGURATION
# ═══════════════════════════════════════════════════════════════════════════════

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/victorykit?retryWrites=true&w=majority
MONGODB_DB_NAME=victorykit

# MongoDB Options
MONGODB_MAX_POOL_SIZE=50
MONGODB_MIN_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT=5000

# Redis Configuration (for caching IP lookups)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=19
REDIS_TLS_ENABLED=false
REDIS_KEY_PREFIX=riskquantify:

# IP Lookup Cache TTL (seconds)
IP_CACHE_TTL=3600
DEVICE_CACHE_TTL=86400

# ═══════════════════════════════════════════════════════════════════════════════
# AUTHENTICATION & SECURITY
# ═══════════════════════════════════════════════════════════════════════════════

# JWT Configuration (for API authentication)
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long
JWT_EXPIRES_IN=7d

# API Key Authentication
API_KEY_HEADER=X-API-Key
API_KEY_PREFIX=rq_

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
IP_LOOKUP_RATE_LIMIT=50
PAYMENT_SIM_RATE_LIMIT=20

# ═══════════════════════════════════════════════════════════════════════════════
# IP INTELLIGENCE APIS (Required)
# ═══════════════════════════════════════════════════════════════════════════════

# AbuseIPDB - IP Abuse Reports & Blacklist
# Get key: https://www.abuseipdb.com/api
ABUSEIPDB_API_KEY=your-abuseipdb-api-key
ABUSEIPDB_ENABLED=true
ABUSEIPDB_MAX_AGE_DAYS=90

# IPQualityScore - Fraud Scoring & VPN Detection
# Get key: https://www.ipqualityscore.com/create-account
IPQUALITYSCORE_API_KEY=your-ipqualityscore-api-key
IPQUALITYSCORE_ENABLED=true
IPQUALITYSCORE_STRICTNESS=1

# IP-API - Basic Geolocation (Free, no key required)
IPAPI_ENABLED=true
IPAPI_PRO_KEY=
# Pro key optional: https://ip-api.com/

# ═══════════════════════════════════════════════════════════════════════════════
# IP INTELLIGENCE APIS (Premium/Optional)
# ═══════════════════════════════════════════════════════════════════════════════

# MaxMind GeoIP2 - Premium Geolocation
# Get key: https://www.maxmind.com/en/geoip2-services
MAXMIND_ACCOUNT_ID=your-maxmind-account-id
MAXMIND_LICENSE_KEY=your-maxmind-license-key
MAXMIND_ENABLED=false
MAXMIND_EDITION=GeoIP2-City

# Shodan - Network Intelligence
# Get key: https://shodan.io/api
SHODAN_API_KEY=your-shodan-api-key
SHODAN_ENABLED=false

# VirusTotal - IP Reputation
# Get key: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=your-virustotal-api-key
VIRUSTOTAL_ENABLED=false

# Greynoise - Internet Noise Filtering
# Get key: https://www.greynoise.io/api
GREYNOISE_API_KEY=your-greynoise-api-key
GREYNOISE_ENABLED=false

# IPinfo.io - IP Geolocation & ASN
# Get key: https://ipinfo.io/signup
IPINFO_API_KEY=your-ipinfo-api-key
IPINFO_ENABLED=false

# ProxyCheck.io - Proxy & VPN Detection
# Get key: https://proxycheck.io/api/
PROXYCHECK_API_KEY=your-proxycheck-api-key
PROXYCHECK_ENABLED=false

# ═══════════════════════════════════════════════════════════════════════════════
# DEVICE FINGERPRINTING
# ═══════════════════════════════════════════════════════════════════════════════

# FingerprintJS Pro (Optional)
# Get key: https://fingerprint.com/
FINGERPRINTJS_API_KEY=your-fingerprintjs-api-key
FINGERPRINTJS_ENABLED=false
FINGERPRINTJS_REGION=us

# Device Trust Score Thresholds
DEVICE_TRUST_HIGH=70
DEVICE_TRUST_MEDIUM=40
DEVICE_TRUST_LOW=0

# ═══════════════════════════════════════════════════════════════════════════════
# BLACKLIST DATABASES
# ═══════════════════════════════════════════════════════════════════════════════

# Spamhaus - Spam & Botnet Detection
# Note: Requires data feed subscription for commercial use
SPAMHAUS_ENABLED=true
SPAMHAUS_DQS_KEY=your-spamhaus-dqs-key

# Barracuda - Spam Source Detection
BARRACUDA_ENABLED=true

# SORBS - Spam & Open Relay Blocking
SORBS_ENABLED=true

# SpamCop - Spam Detection
SPAMCOP_ENABLED=true

# CBL - Composite Blocking List
CBL_ENABLED=true

# UCEPROTECT - Multi-level Blocking
UCEPROTECT_ENABLED=true

# Invaluement - Anti-Spam
INVALUEMENT_ENABLED=true

# Blocklist.de - Attack Source Blocking
BLOCKLIST_DE_ENABLED=true

# Stop Forum Spam - Forum/Comment Spam
STOPFORUMSPAM_ENABLED=true

# ═══════════════════════════════════════════════════════════════════════════════
# PAYMENT SIMULATION
# ═══════════════════════════════════════════════════════════════════════════════

# Risk Score Thresholds for Payment Decisions
PAYMENT_APPROVE_MAX_RISK=30
PAYMENT_REVIEW_MAX_RISK=50
PAYMENT_DECLINE_MIN_RISK=70

# High Risk Regions (ISO country codes, comma-separated)
HIGH_RISK_REGIONS=RU,CN,NG,UA,KP,IR,SY

# Amount Thresholds
AMOUNT_LOW_RISK=100
AMOUNT_MEDIUM_RISK=500
AMOUNT_HIGH_RISK=1000

# Check Weights (must sum to 1.0)
WEIGHT_IP_RISK=0.4
WEIGHT_DEVICE_TRUST=0.3
WEIGHT_REGION_RISK=0.15
WEIGHT_AMOUNT_RISK=0.15

# ═══════════════════════════════════════════════════════════════════════════════
# LOGGING & MONITORING
# ═══════════════════════════════════════════════════════════════════════════════

# Log Level
LOG_LEVEL=info
# Options: error, warn, info, debug, trace

# Log Format
LOG_FORMAT=json
# Options: json, pretty

# Log File (optional)
LOG_FILE_ENABLED=false
LOG_FILE_PATH=/var/log/riskquantify/app.log
LOG_FILE_MAX_SIZE=10m
LOG_FILE_MAX_FILES=5

# Sentry Error Tracking (Optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

