# FraudGuard API

PORT=4001
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/fraudguard_db

# CORS
CORS_ORIGIN=http://localhost:3001

# ML Engine
ML_ENGINE_URL=http://localhost:8001

# AI Assistant
AI_ASSISTANT_URL=http://localhost:6001

# Logging
LOG_LEVEL=info

# ================================================
# External Security API Keys (Required for Scanners)
# ================================================

# VirusTotal - URL/File/Domain scanning
# Get key: https://www.virustotal.com/gui/join-us
VIRUSTOTAL_API_KEY=your_virustotal_api_key

# Google Safe Browsing - Phishing/Malware detection
# Get key: https://console.cloud.google.com/apis/library/safebrowsing.googleapis.com
GOOGLE_SAFE_BROWSING_KEY=your_google_safe_browsing_key

# URLScan.io - Website scanning and screenshots
# Get key: https://urlscan.io/user/signup
URLSCAN_API_KEY=your_urlscan_api_key

# Have I Been Pwned - Email breach checking
# Get key: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=your_hibp_api_key

# AbuseIPDB - IP reputation and abuse reports
# Get key: https://www.abuseipdb.com/account/api
ABUSEIPDB_API_KEY=your_abuseipdb_api_key

# IPQualityScore - Email/Phone/IP fraud detection
# Get key: https://www.ipqualityscore.com/create-account
IPQUALITYSCORE_API_KEY=your_ipqualityscore_api_key

# NumVerify - Phone number validation
# Get key: https://numverify.com/product
NUMVERIFY_API_KEY=your_numverify_api_key

# Twilio (Optional) - Enhanced phone lookup
# Get key: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
