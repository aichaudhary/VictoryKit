# ============================================
# IOTSECURE - TOOL #42 ENVIRONMENT CONFIG
# ============================================
# Copy to .env and fill in real values
# NEVER commit .env to git!
# Site: https://iotsecure.maula.ai
# ============================================

# ===================
# SERVER CONFIGURATION
# ===================
PORT=4041
NODE_ENV=development
API_BASE_URL=https://iotsecure.maula.ai/api
FRONTEND_URL=https://iotsecure.maula.ai

# ===================
# DATABASE (MongoDB)
# Get from: MongoDB Atlas > Connect > Drivers
# ===================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/iotsecure_db?retryWrites=true&w=majority

# ===================
# ML ENGINE
# Internal ML service for anomaly detection
# ===================
ML_ENGINE_URL=http://localhost:8041

# ============================================
# IOT SECURITY APIS
# ============================================

# ===================
# SHODAN - Device Discovery & Banner Grabbing
# Get from: https://account.shodan.io
# Docs: https://developer.shodan.io/api
# ===================
SHODAN_API_KEY=your_shodan_api_key_here
SHODAN_API_URL=https://api.shodan.io

# ===================
# CENSYS - Internet Device Scanning
# Get from: https://search.censys.io/account/api
# Docs: https://search.censys.io/api
# ===================
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here
CENSYS_API_URL=https://search.censys.io/api/v2

# ===================
# NVD (NIST) - CVE Vulnerability Database
# Get from: https://nvd.nist.gov/developers/request-an-api-key
# Docs: https://nvd.nist.gov/developers/vulnerabilities
# ===================
NVD_API_KEY=your_nvd_api_key_here
NVD_API_URL=https://services.nvd.nist.gov/rest/json/cves/2.0

# ===================
# VIRUSTOTAL - Firmware Malware Scanning
# Get from: https://www.virustotal.com/gui/my-apikey
# Docs: https://developers.virustotal.com/reference
# ===================
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
VIRUSTOTAL_API_URL=https://www.virustotal.com/api/v3

# ===================
# GREYNOISE - IoT Attack Intelligence
# Get from: https://www.greynoise.io/account/api-key
# Docs: https://docs.greynoise.io
# ===================
GREYNOISE_API_KEY=your_greynoise_api_key_here
GREYNOISE_API_URL=https://api.greynoise.io/v3

# ===================
# BINARYEDGE - IoT Device Intelligence
# Get from: https://app.binaryedge.io/account/api
# Docs: https://docs.binaryedge.io
# ===================
BINARYEDGE_API_KEY=your_binaryedge_api_key_here
BINARYEDGE_API_URL=https://api.binaryedge.io/v2

# ============================================
# AI & ML PROVIDERS
# ============================================

# ===================
# OPENAI - AI Chat & Analysis
# Get from: https://platform.openai.com/api-keys
# Docs: https://platform.openai.com/docs
# ===================
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview

# ===================
# ANTHROPIC - Alternative AI Provider
# Get from: https://console.anthropic.com/settings/keys
# Docs: https://docs.anthropic.com/claude/reference
# ===================
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_API_URL=https://api.anthropic.com
ANTHROPIC_MODEL=claude-3-opus-20240229

# ============================================
# GEOLOCATION & MAPPING
# ============================================

# ===================
# MAXMIND GEOIP - Device Location Mapping
# Get from: https://www.maxmind.com/en/account/license-key
# Docs: https://dev.maxmind.com/geoip
# ===================
MAXMIND_LICENSE_KEY=your_maxmind_license_key_here
MAXMIND_ACCOUNT_ID=your_maxmind_account_id_here

# ===================
# MAPBOX - Network Topology Visualization
# Get from: https://account.mapbox.com/access-tokens
# Docs: https://docs.mapbox.com
# ===================
MAPBOX_ACCESS_TOKEN=pk.your_mapbox_access_token_here

# ============================================
# REAL-TIME & WEBSOCKET
# ============================================

# ===================
# PUSHER - Real-time WebSocket
# Get from: https://dashboard.pusher.com/apps
# Docs: https://pusher.com/docs
# ===================
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_KEY=your_pusher_key_here
PUSHER_SECRET=your_pusher_secret_here
PUSHER_CLUSTER=us2

# ===================
# SOCKET.IO - Alternative WebSocket (Built-in)
# No external API needed
# ===================
SOCKET_IO_ENABLED=true
SOCKET_IO_CORS_ORIGIN=https://iotsecure.maula.ai

# ============================================
# NOTIFICATIONS & ALERTS
# ============================================

# ===================
# TWILIO - SMS Alerts
# Get from: https://console.twilio.com/
# Docs: https://www.twilio.com/docs/sms
# ===================
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# SENDGRID - Email Notifications
# Get from: https://app.sendgrid.com/settings/api_keys
# Docs: https://docs.sendgrid.com
# ===================
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=alerts@iotsecure.maula.ai
SENDGRID_FROM_NAME=IoTSecure Alerts

# ===================
# SLACK - Team Notifications
# Get from: https://api.slack.com/apps
# Docs: https://api.slack.com/messaging
# ===================
SLACK_BOT_TOKEN=xoxb-your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here
SLACK_CHANNEL_ID=C01XXXXXXXX

# ===================
# DISCORD - Team Notifications
# Get from: https://discord.com/developers/applications
# Docs: https://discord.com/developers/docs
# ===================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxx/xxx

# ===================
# PAGERDUTY - Critical Incident Alerts
# Get from: https://support.pagerduty.com/docs/api-access-keys
# Docs: https://developer.pagerduty.com/docs
# ===================
PAGERDUTY_API_KEY=your_pagerduty_api_key_here
PAGERDUTY_SERVICE_ID=your_service_id_here
PAGERDUTY_ROUTING_KEY=your_routing_key_here

# ============================================
# SECURITY INTEGRATIONS
# ============================================

# ===================
# MICROSOFT SENTINEL - SIEM Integration
# Get from: Azure Portal > Sentinel > Settings
# Docs: https://docs.microsoft.com/azure/sentinel
# ===================
SENTINEL_WORKSPACE_ID=your_sentinel_workspace_id_here
SENTINEL_SHARED_KEY=your_sentinel_shared_key_here
SENTINEL_LOG_TYPE=IoTSecureEvents

# ===================
# CROWDSTRIKE - Endpoint Protection
# Get from: https://falcon.crowdstrike.com/api-clients
# Docs: https://falcon.crowdstrike.com/documentation
# ===================
CROWDSTRIKE_CLIENT_ID=your_crowdstrike_client_id_here
CROWDSTRIKE_CLIENT_SECRET=your_crowdstrike_client_secret_here
CROWDSTRIKE_BASE_URL=https://api.crowdstrike.com

# ===================
# CORTEX XSOAR - SOAR Integration
# Get from: XSOAR Admin > Settings > API Keys
# Docs: https://xsoar.pan.dev
# ===================
XSOAR_API_KEY=your_xsoar_api_key_here
XSOAR_API_URL=https://your-xsoar-instance.com/api

# ============================================
# CLOUD PROVIDERS (Optional)
# ============================================

# ===================
# AWS - S3 Storage for Firmware/Reports
# Get from: https://console.aws.amazon.com/iam
# ===================
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=iotsecure-storage

# ===================
# CLOUDFLARE - Traffic Protection
# Get from: https://dash.cloudflare.com/profile/api-tokens
# ===================
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token_here
CLOUDFLARE_ZONE_ID=your_zone_id_here

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
JWT_SECRET=your_jwt_secret_here
API_KEY_HEADER=X-API-Key

# ============================================
# LOGGING & MONITORING
# ============================================
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://xxx@sentry.io/xxx

# ============================================
# FEATURE FLAGS
# ============================================
FEATURE_FIRMWARE_ANALYSIS=true
FEATURE_REALTIME_MONITORING=true
FEATURE_AI_CHAT=true
FEATURE_NETWORK_TOPOLOGY=true
FEATURE_BEHAVIOR_BASELINE=true
