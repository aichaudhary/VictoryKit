# ============================================
# DDoSShield API Configuration
# Tool 24 - DDoS Protection & Traffic Analysis Platform
# ============================================

# Server Configuration
PORT=4024
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/victorykit_ddosshield

# JWT Secret for API Authentication
JWT_SECRET=your-jwt-secret-key-here

# ===========================================
# Cloudflare DDoS Protection Integration
# ===========================================

# Cloudflare API (Primary DDoS Protection)
# Get API token at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone.DDoS, Zone.Analytics, Zone.WAF
CLOUDFLARE_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_ZONE_ID=your-cloudflare-zone-id
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id

# ===========================================
# Akamai DDoS Protection Integration
# ===========================================

# Akamai Kona Site Defender
# Get credentials at: https://control.akamai.com
AKAMAI_HOST=https://akab-xxxxxxxxxxxxx.luna.akamaiapis.net
AKAMAI_CLIENT_TOKEN=your-akamai-client-token
AKAMAI_CLIENT_SECRET=your-akamai-client-secret
AKAMAI_ACCESS_TOKEN=your-akamai-access-token

# ===========================================
# AWS Shield Advanced Integration
# ===========================================

# AWS Shield Advanced (Enterprise DDoS Protection)
# Get credentials at: https://console.aws.amazon.com/iam
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_SHIELD_ARN=arn:aws:shield::123456789012:protection/your-protection-id

# ===========================================
# Azure DDoS Protection Integration
# ===========================================

# Azure DDoS Protection Standard
# Get credentials at: https://portal.azure.com
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id

# ===========================================
# Imperva Incapsula Integration
# ===========================================

# Imperva Incapsula DDoS Protection
# Get API credentials at: https://my.imperva.com
IMPERVA_API_ID=your-imperva-api-id
IMPERVA_API_KEY=your-imperva-api-key
IMPERVA_SITE_ID=your-imperva-site-id

# ===========================================
# Fastly DDoS Protection Integration
# ===========================================

# Fastly DDoS Protection
# Get API token at: https://manage.fastly.com/account/personal/tokens
FASTLY_API_TOKEN=your-fastly-api-token
FASTLY_SERVICE_ID=your-fastly-service-id

# ===========================================
# Additional DDoS Protection Services
# ===========================================

# Cloudflare Spectrum (Advanced DDoS for non-HTTP)
# Uses same CLOUDFLARE_API_TOKEN above

# Radware DefensePro
# Get API credentials from your Radware representative
RADWARE_API_URL=https://your-radware-management-ip
RADWARE_USERNAME=your-radware-username
RADWARE_PASSWORD=your-radware-password

# F5 BIG-IP AFM (Advanced Firewall Manager)
# Get credentials from your F5 management interface
F5_MGMT_IP=your-f5-management-ip
F5_USERNAME=your-f5-username
F5_PASSWORD=your-f5-password

# ===========================================
# Traffic Analysis & Intelligence
# ===========================================

# MaxMind GeoIP2 (Geographic traffic analysis)
# Get credentials at: https://www.maxmind.com/en/account
MAXMIND_ACCOUNT_ID=your-maxmind-account-id
MAXMIND_LICENSE_KEY=your-maxmind-license-key

# IPInfo.io (IP geolocation & ASN data)
# Get token at: https://ipinfo.io/account/token
IPINFO_TOKEN=your-ipinfo-token

# Shodan (Internet scanning data for attack intelligence)
# Get API key at: https://account.shodan.io
SHODAN_API_KEY=your-shodan-api-key

# GreyNoise (Internet scanning intelligence)
# Get API key at: https://www.greynoise.io
GREYNOISE_API_KEY=your-greynoise-api-key

# ===========================================
# Webhook & Alert Configuration
# ===========================================

# Slack Integration for DDoS alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=your-pagerduty-integration-key

# Webhook for custom integrations
ALERT_WEBHOOK_URL=https://your-custom-webhook-endpoint

# ===========================================
# Detection Thresholds & Configuration
# ===========================================

# DDoS Detection Thresholds
DDoS_BANDWIDTH_THRESHOLD_MBPS=1000
DDoS_PACKETS_THRESHOLD_MPPS=100
DDoS_REQUESTS_THRESHOLD_RPS=10000

# Rate Limiting Defaults
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Auto-mitigation settings
AUTO_MITIGATION_ENABLED=true
AUTO_MITIGATION_THRESHOLD=80

# ===========================================
# WebSocket & Real-time Configuration
# ===========================================

WS_PORT=4124
WS_HEARTBEAT_INTERVAL=30000
TRAFFIC_UPDATE_INTERVAL=5000

# ===========================================
# Logging & Monitoring
# ===========================================

LOG_LEVEL=info
ENABLE_TRAFFIC_LOGGING=true
TRAFFIC_LOG_RETENTION_DAYS=30

# ML Engine for advanced detection
ML_ENGINE_URL=http://localhost:8024