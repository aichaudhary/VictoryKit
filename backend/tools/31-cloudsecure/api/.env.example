# ============================================
# CLOUDSECURE API CONFIGURATION
# ============================================
NODE_ENV=development
PORT=4031

# Database
MONGODB_URI=mongodb://localhost:27017
DB_NAME=victorykit_cloudsecure

# JWT (shared secret)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# ============================================
# AWS CONFIGURATION
# Get credentials from: https://console.aws.amazon.com/iam/home#/security_credentials
# ============================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# AWS Config - For compliance scanning
# Enable AWS Config: https://console.aws.amazon.com/config/
AWS_CONFIG_ENABLED=true

# ============================================
# AZURE CONFIGURATION
# Get credentials from: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
# ============================================
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# ============================================
# GOOGLE CLOUD CONFIGURATION
# Get credentials from: https://console.cloud.google.com/iam-admin/serviceaccounts
# ============================================
GCP_PROJECT_ID=your_gcp_project_id
GCP_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GCP_PRIVATE_KEY=your_private_key

# Or use key file path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json

# ============================================
# THIRD-PARTY SECURITY APIs
# ============================================

# Prowler (AWS Security Tool)
# Install: https://github.com/prowler-cloud/prowler
PROWLER_ENABLED=true

# ScoutSuite (Multi-cloud Security Auditing)
# Install: https://github.com/nccgroup/ScoutSuite
SCOUTSUITE_ENABLED=true

# CloudSploit (Open Source Cloud Security Scanner)
# https://github.com/aquasecurity/cloudsploit
CLOUDSPLOIT_API_KEY=your_cloudsploit_api_key

# Orca Security (Cloud Security Platform)
# https://orca.security/
ORCA_API_KEY=your_orca_api_key
ORCA_API_URL=https://api.orcasecurity.io/api

# Wiz.io (Cloud Security)
# https://www.wiz.io/
WIZ_CLIENT_ID=your_wiz_client_id
WIZ_CLIENT_SECRET=your_wiz_client_secret
WIZ_API_URL=https://api.wiz.io/graphql

# Prisma Cloud (Palo Alto)
# https://docs.paloaltonetworks.com/prisma/prisma-cloud
PRISMA_ACCESS_KEY=your_prisma_access_key
PRISMA_SECRET_KEY=your_prisma_secret_key
PRISMA_API_URL=https://api.prismacloud.io

# Lacework (Cloud Security Platform)
# https://www.lacework.com/
LACEWORK_ACCOUNT=your_lacework_account
LACEWORK_API_KEY=your_lacework_api_key
LACEWORK_API_SECRET=your_lacework_api_secret

# ============================================
# COMPLIANCE FRAMEWORKS
# ============================================
# CIS Benchmarks
CIS_BENCHMARK_VERSION=1.5.0

# SOC 2 Type II
SOC2_ENABLED=true

# PCI-DSS
PCIDSS_ENABLED=true
PCIDSS_VERSION=4.0

# HIPAA
HIPAA_ENABLED=true

# GDPR
GDPR_ENABLED=true

# ISO 27001
ISO27001_ENABLED=true

# NIST CSF
NIST_CSF_ENABLED=true

# ============================================
# NOTIFICATIONS
# ============================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=security@yourdomain.com

# Logging
LOG_LEVEL=info
