# ===========================================
# PasswordVault - Enterprise Password & Secrets Management
# Environment Configuration
# ===========================================

# Server Configuration
PORT=4033
NODE_ENV=development
API_BASE_URL=http://localhost:4033
FRONTEND_URL=http://localhost:3033

# MongoDB Connection
MONGODB_URI=mongodb+srv://victory_db_user:victory_db_password@victorykit.gbnvij2.mongodb.net/victorykit_passwordvault?appName=victorykit

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=passwordvault-jwt-secret-for-production-use-only
JWT_EXPIRE=24h
JWT_REFRESH_SECRET=passwordvault-refresh-jwt-secret
JWT_REFRESH_EXPIRE=7d

# Encryption Configuration
ENCRYPTION_KEY=passwordvault-32-char-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# ===========================================
# Authentication & Identity Providers
# ===========================================

# Google OAuth 2.0
# Get from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft Azure AD
# Get from: https://portal.azure.com/
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# GitHub OAuth
# Get from: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Multi-Factor Authentication (MFA)
# ===========================================

# Twilio SMS/Call MFA
# Get from: https://www.twilio.com/
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number

# Email Service (for MFA codes)
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# Security & Compliance APIs
# ===========================================

# Have I Been Pwned API (Password Breach Checking)
# Get from: https://haveibeenpwned.com/API/Key
HIBP_API_KEY=your-hibp-api-key

# VirusTotal API (File/Malware Scanning)
# Get from: https://www.virustotal.com/gui/my-apikey
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Shodan API (Device/Asset Discovery)
# Get from: https://account.shodan.io/
SHODAN_API_KEY=your-shodan-api-key

# ===========================================
# Enterprise Integrations
# ===========================================

# Active Directory/LDAP
LDAP_URL=ldap://your-domain.com
LDAP_BIND_DN=CN=ServiceAccount,OU=Users,DC=yourdomain,DC=com
LDAP_BIND_PASSWORD=your-ldap-password
LDAP_BASE_DN=DC=yourdomain,DC=com

# Okta SSO
# Get from: https://developer.okta.com/
OKTA_CLIENT_ID=your-okta-client-id
OKTA_CLIENT_SECRET=your-okta-client-secret
OKTA_ISSUER=https://your-org.okta.com/oauth2/default

# Auth0
# Get from: https://manage.auth0.com/
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_DOMAIN=your-auth0-domain.auth0.com

# ===========================================
# Hardware Security Modules (HSM)
# ===========================================

# AWS CloudHSM
# Get from: https://console.aws.amazon.com/cloudhsm/
AWS_CLOUDHSM_CLUSTER_ID=your-cluster-id
AWS_CLOUDHSM_USERNAME=your-hsm-username
AWS_CLOUDHSM_PASSWORD=your-hsm-password

# Azure Key Vault
# Get from: https://portal.azure.com/
AZURE_KEY_VAULT_NAME=your-key-vault-name
AZURE_KEY_VAULT_URI=https://your-key-vault.vault.azure.net/

# ===========================================
# Monitoring & Analytics
# ===========================================

# DataDog APM
# Get from: https://app.datadoghq.com/
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key

# New Relic
# Get from: https://one.newrelic.com/
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key

# ===========================================
# Compliance & Audit
# ===========================================

# SOC 2 Compliance Webhook
SOC2_WEBHOOK_URL=https://your-soc2-webhook-url
SOC2_WEBHOOK_SECRET=your-webhook-secret

# ISO 27001 Audit Logs
ISO27001_AUDIT_ENDPOINT=https://your-audit-endpoint
ISO27001_AUDIT_API_KEY=your-audit-api-key

# ===========================================
# AI/ML Services
# ===========================================

# OpenAI (Password Analysis & Recommendations)
OPENAI_API_KEY=your-openai-api-key

# Anthropic Claude (Advanced Security Analysis)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Google Gemini (Password Strength ML)
GEMINI_API_KEY=your-gemini-api-key

# ===========================================
# Rate Limiting & Security
# ===========================================

RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3033,https://yourdomain.com
CORS_CREDENTIALS=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000
CSP_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline'

# ===========================================
# Feature Flags
# ===========================================

ENABLE_MFA=true
ENABLE_SOCIAL_AUTH=true
ENABLE_AUDIT_LOGGING=true
ENABLE_ENCRYPTION=true
ENABLE_BACKUP=true
ENABLE_COMPLIANCE_REPORTING=true
ENABLE_AI_ANALYSIS=true
