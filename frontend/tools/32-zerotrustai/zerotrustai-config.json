{
  "tool_id": 32,
  "tool_name": "ZeroTrustAI",
  "version": "1.0.0",
  "tagline": "AI-Powered Zero Trust Architecture & Access Control",
  "base_domain": "zerotrustai.maula.ai",
  "api_port": 4032,
  "frontend_port": 3032,
  "ml_port": 8032,
  "ai_port": 6032,
  "database_name": "zerotrustai_db",
  
  "theme": {
    "primary_color": "#7c3aed",
    "secondary_color": "#a78bfa",
    "accent_color": "#8b5cf6",
    "icon": "üõ°Ô∏è"
  },
  
  "navigation": [
    { "label": "Dashboard", "path": "/", "icon": "LayoutDashboard" },
    { "label": "Access Control", "path": "/access-control", "icon": "Lock" },
    { "label": "Identity Verification", "path": "/identity", "icon": "UserCheck" },
    { "label": "Policy Engine", "path": "/policies", "icon": "FileText" },
    { "label": "Risk Analysis", "path": "/risk-analysis", "icon": "AlertTriangle" },
    { "label": "Network Segmentation", "path": "/network", "icon": "Network" },
    { "label": "Continuous Monitoring", "path": "/monitoring", "icon": "Activity" },
    { "label": "Device Trust", "path": "/devices", "icon": "Smartphone" },
    { "label": "Micro-Segmentation", "path": "/micro-segmentation", "icon": "Grid" },
    { "label": "Reports", "path": "/reports", "icon": "FileBarChart" },
    { "label": "Settings", "path": "/settings", "icon": "Settings" }
  ],
  
  "zero_trust_principles": [
    "verify_explicitly",
    "least_privilege_access",
    "assume_breach",
    "continuous_validation",
    "microsegmentation",
    "encryption_everywhere"
  ],
  
  "trust_factors": [
    "user_identity",
    "device_health",
    "location_context",
    "time_context",
    "behavior_analysis",
    "network_trust",
    "application_trust",
    "data_sensitivity"
  ],
  
  "authentication_methods": [
    "mfa_hardware_token",
    "mfa_software_token",
    "biometric",
    "certificate_based",
    "passwordless",
    "risk_adaptive",
    "continuous_authentication"
  ],
  
  "policy_frameworks": [
    "NIST_Zero_Trust_Architecture",
    "Google_BeyondCorp",
    "Forrester_Zero_Trust",
    "Gartner_CARTA",
    "CISA_Zero_Trust_Maturity",
    "DOD_Zero_Trust_Reference"
  ],
  
  "ai": {
    "system_prompt": "You are ZeroTrustAI, an expert in zero trust security architecture, identity and access management (IAM), continuous authentication, risk-based access control, network micro-segmentation, and behavioral analytics. You help organizations implement 'never trust, always verify' principles, design zero trust policies, analyze access patterns, calculate trust scores (0-100), detect anomalous behavior, manage device trust, implement least privilege access, and ensure continuous security validation. You provide guidance on NIST Zero Trust Architecture, Google BeyondCorp, Forrester Zero Trust, and other frameworks. Always explain zero trust concepts clearly while providing actionable security recommendations.",
    
    "model_config": {
      "primary_model": "gemini-1.5-pro",
      "fallback_models": ["claude-3.5-sonnet", "gpt-4-turbo", "grok-beta"],
      "temperature": 0.3,
      "max_tokens": 4096,
      "streaming": true
    },
    
    "functions": [
      {
        "name": "verify_access_request",
        "description": "Verify access request using zero trust principles with multi-factor analysis including user identity, device trust, location, time, behavior patterns, and resource sensitivity",
        "parameters": {
          "type": "object",
          "properties": {
            "user_id": { "type": "string", "description": "User identifier" },
            "resource_id": { "type": "string", "description": "Resource/application identifier" },
            "device_id": { "type": "string", "description": "Device identifier" },
            "location": { "type": "object", "description": "User location context (IP, geo-location, network)" },
            "time_context": { "type": "object", "description": "Time and schedule context" },
            "mfa_verified": { "type": "boolean", "description": "Multi-factor authentication status" },
            "request_context": { "type": "object", "description": "Additional request context" }
          },
          "required": ["user_id", "resource_id", "device_id"]
        }
      },
      {
        "name": "calculate_trust_score",
        "description": "Calculate comprehensive trust score (0-100) for user, device, or resource based on multiple trust factors including identity strength, device health, behavior patterns, location, time, and historical risk",
        "parameters": {
          "type": "object",
          "properties": {
            "entity_type": { "type": "string", "enum": ["user", "device", "application", "session"], "description": "Type of entity to score" },
            "entity_id": { "type": "string", "description": "Entity identifier" },
            "trust_factors": { "type": "object", "description": "Trust factors to evaluate" },
            "time_window": { "type": "string", "description": "Time window for analysis (e.g., '24h', '7d')" }
          },
          "required": ["entity_type", "entity_id"]
        }
      },
      {
        "name": "create_zero_trust_policy",
        "description": "Create or update zero trust access policy with conditions, trust requirements, risk thresholds, adaptive controls, and enforcement rules",
        "parameters": {
          "type": "object",
          "properties": {
            "policy_name": { "type": "string", "description": "Policy name" },
            "resource_scope": { "type": "array", "description": "Resources covered by policy" },
            "user_scope": { "type": "array", "description": "Users/groups covered by policy" },
            "trust_requirements": { "type": "object", "description": "Required trust levels and factors" },
            "conditions": { "type": "object", "description": "Access conditions (time, location, device, etc.)" },
            "enforcement_action": { "type": "string", "enum": ["allow", "deny", "step_up_auth", "limited_access"], "description": "Enforcement action" },
            "risk_adaptive": { "type": "boolean", "description": "Enable risk-adaptive controls" }
          },
          "required": ["policy_name", "resource_scope", "trust_requirements"]
        }
      },
      {
        "name": "analyze_behavior_anomalies",
        "description": "Analyze user or device behavior for anomalies using ML models, detect deviations from baseline patterns, identify suspicious activities, and calculate anomaly risk scores",
        "parameters": {
          "type": "object",
          "properties": {
            "entity_type": { "type": "string", "enum": ["user", "device", "application"], "description": "Entity type" },
            "entity_id": { "type": "string", "description": "Entity identifier" },
            "time_range": { "type": "object", "description": "Time range for analysis" },
            "behavior_types": { "type": "array", "description": "Behavior types to analyze (access_patterns, data_exfiltration, privilege_escalation, etc.)" },
            "sensitivity": { "type": "string", "enum": ["low", "medium", "high", "critical"], "description": "Detection sensitivity" }
          },
          "required": ["entity_type", "entity_id"]
        }
      },
      {
        "name": "assess_device_trust",
        "description": "Assess device trustworthiness based on security posture including OS version, patch level, encryption status, antivirus, firewall, jailbreak/root status, compliance, and historical behavior",
        "parameters": {
          "type": "object",
          "properties": {
            "device_id": { "type": "string", "description": "Device identifier" },
            "device_attributes": { "type": "object", "description": "Device attributes (OS, version, manufacturer, etc.)" },
            "security_posture": { "type": "object", "description": "Security controls status" },
            "compliance_requirements": { "type": "array", "description": "Compliance requirements to check" }
          },
          "required": ["device_id"]
        }
      },
      {
        "name": "design_microsegmentation",
        "description": "Design network micro-segmentation strategy with security zones, segment boundaries, access rules, East-West traffic controls, and workload isolation policies",
        "parameters": {
          "type": "object",
          "properties": {
            "network_scope": { "type": "object", "description": "Network scope (subnets, VLANs, cloud VPCs)" },
            "workload_groups": { "type": "array", "description": "Workload groups to segment" },
            "data_classification": { "type": "object", "description": "Data sensitivity classifications" },
            "segmentation_strategy": { "type": "string", "enum": ["application_centric", "data_centric", "user_centric", "hybrid"], "description": "Segmentation strategy" },
            "enforcement_method": { "type": "string", "enum": ["firewall_rules", "software_defined", "identity_based"], "description": "Enforcement method" }
          },
          "required": ["network_scope", "workload_groups"]
        }
      },
      {
        "name": "continuous_authentication",
        "description": "Perform continuous authentication during active session using behavioral biometrics, keystroke dynamics, mouse patterns, device signals, and risk indicators to detect session hijacking",
        "parameters": {
          "type": "object",
          "properties": {
            "session_id": { "type": "string", "description": "Active session identifier" },
            "user_id": { "type": "string", "description": "User identifier" },
            "behavioral_data": { "type": "object", "description": "Behavioral biometrics data" },
            "device_signals": { "type": "object", "description": "Real-time device signals" },
            "risk_threshold": { "type": "number", "description": "Risk threshold for re-authentication (0-100)" }
          },
          "required": ["session_id", "user_id"]
        }
      },
      {
        "name": "generate_access_report",
        "description": "Generate comprehensive zero trust access report with trust scores, policy violations, anomalies detected, risk trends, compliance status, and recommendations",
        "parameters": {
          "type": "object",
          "properties": {
            "report_type": { "type": "string", "enum": ["executive", "technical", "compliance", "risk_assessment"], "description": "Report type" },
            "time_period": { "type": "object", "description": "Report time period" },
            "scope": { "type": "object", "description": "Report scope (users, devices, resources)" },
            "include_recommendations": { "type": "boolean", "description": "Include security recommendations" },
            "format": { "type": "string", "enum": ["json", "pdf", "html"], "description": "Report format" }
          },
          "required": ["report_type", "time_period"]
        }
      },
      {
        "name": "implement_least_privilege",
        "description": "Analyze current access permissions and recommend least privilege access policies, identify over-privileged users, suggest role-based access controls (RBAC), and generate just-in-time (JIT) access policies",
        "parameters": {
          "type": "object",
          "properties": {
            "scope": { "type": "object", "description": "Scope for analysis (users, groups, resources)" },
            "current_permissions": { "type": "object", "description": "Current permission assignments" },
            "access_history": { "type": "object", "description": "Historical access patterns" },
            "business_roles": { "type": "array", "description": "Business roles for RBAC mapping" },
            "jit_enabled": { "type": "boolean", "description": "Enable just-in-time access recommendations" }
          },
          "required": ["scope"]
        }
      },
      {
        "name": "detect_lateral_movement",
        "description": "Detect potential lateral movement and privilege escalation attempts using network traffic analysis, access pattern correlation, and behavioral anomalies across multiple systems",
        "parameters": {
          "type": "object",
          "properties": {
            "time_window": { "type": "string", "description": "Time window for analysis" },
            "network_scope": { "type": "object", "description": "Network scope to analyze" },
            "detection_models": { "type": "array", "description": "ML models to use (graph_analysis, sequence_analysis, anomaly_detection)" },
            "alert_threshold": { "type": "string", "enum": ["low", "medium", "high", "critical"], "description": "Alert threshold" }
          },
          "required": ["time_window"]
        }
      }
    ]
  }
}
