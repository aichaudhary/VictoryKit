{
  "tool": {
    "id": 29,
    "name": "RiskScoreAI",
    "slug": "riskscoreai",
    "description": "AI-Powered Cyber Risk Quantification and Security Scoring Platform",
    "category": "Risk Management",
    "icon": "gauge",
    "color": "#F59E0B",
    "version": "1.0.0"
  },
  "domain": {
    "production": "riskscoreai.maula.ai",
    "staging": "riskscoreai-staging.maula.ai",
    "development": "localhost"
  },
  "ports": {
    "frontend": 3029,
    "api": 4029,
    "websocket": 6029,
    "ml": 8029
  },
  "features": {
    "organization_scoring": true,
    "vendor_risk_management": true,
    "risk_quantification": true,
    "trend_analysis": true,
    "remediation_tracking": true,
    "compliance_mapping": true,
    "benchmarking": true,
    "ai_assistant": true
  },
  "scoring": {
    "scale": {
      "min": 0,
      "max": 100
    },
    "grades": [
      { "grade": "A", "min": 90, "max": 100, "label": "Excellent", "color": "#22C55E" },
      { "grade": "B", "min": 80, "max": 89, "label": "Good", "color": "#84CC16" },
      { "grade": "C", "min": 70, "max": 79, "label": "Fair", "color": "#EAB308" },
      { "grade": "D", "min": 60, "max": 69, "label": "Poor", "color": "#F97316" },
      { "grade": "F", "min": 0, "max": 59, "label": "Critical", "color": "#EF4444" }
    ],
    "risk_factors": [
      { "id": "network_security", "name": "Network Security", "weight": 0.15 },
      { "id": "patching_cadence", "name": "Patching Cadence", "weight": 0.15 },
      { "id": "endpoint_security", "name": "Endpoint Security", "weight": 0.12 },
      { "id": "dns_health", "name": "DNS Health", "weight": 0.08 },
      { "id": "application_security", "name": "Application Security", "weight": 0.12 },
      { "id": "ip_reputation", "name": "IP Reputation", "weight": 0.10 },
      { "id": "hacker_chatter", "name": "Hacker Chatter", "weight": 0.08 },
      { "id": "leaked_credentials", "name": "Leaked Credentials", "weight": 0.10 },
      { "id": "social_engineering", "name": "Social Engineering", "weight": 0.05 },
      { "id": "information_disclosure", "name": "Information Disclosure", "weight": 0.05 }
    ]
  },
  "ai": {
    "providers": [
      { "name": "openai", "models": ["gpt-4o", "gpt-4-turbo"] },
      { "name": "anthropic", "models": ["claude-3-5-sonnet", "claude-3-opus"] },
      { "name": "google", "models": ["gemini-pro", "gemini-ultra"] }
    ],
    "functions": [
      {
        "name": "calculate_risk_score",
        "description": "Calculate overall risk score for an organization",
        "parameters": ["organization_id", "include_factors"]
      },
      {
        "name": "assess_vendor_risk",
        "description": "Assess cybersecurity risk of a third-party vendor",
        "parameters": ["vendor_domain", "assessment_depth"]
      },
      {
        "name": "quantify_risk",
        "description": "Convert risk score to financial impact estimate",
        "parameters": ["risk_score", "organization_size", "industry"]
      },
      {
        "name": "generate_remediation",
        "description": "Generate AI-powered remediation recommendations",
        "parameters": ["risk_factors", "priority"]
      },
      {
        "name": "trend_analysis",
        "description": "Analyze risk score trends over time",
        "parameters": ["organization_id", "time_range"]
      },
      {
        "name": "benchmark_analysis",
        "description": "Compare organization against industry peers",
        "parameters": ["organization_id", "industry", "size"]
      },
      {
        "name": "compliance_mapping",
        "description": "Map risks to compliance framework requirements",
        "parameters": ["risks", "framework"]
      },
      {
        "name": "predict_breach_probability",
        "description": "Predict likelihood of breach based on risk factors",
        "parameters": ["risk_factors", "historical_data"]
      }
    ]
  },
  "integrations": {
    "data_sources": [
      { "id": "dns_records", "name": "DNS Records", "type": "passive" },
      { "id": "ssl_certificates", "name": "SSL Certificates", "type": "passive" },
      { "id": "open_ports", "name": "Open Ports", "type": "active" },
      { "id": "web_technologies", "name": "Web Technologies", "type": "passive" },
      { "id": "breach_databases", "name": "Breach Databases", "type": "passive" },
      { "id": "dark_web", "name": "Dark Web Monitoring", "type": "passive" }
    ],
    "compliance_frameworks": [
      { "id": "nist_csf", "name": "NIST CSF" },
      { "id": "iso_27001", "name": "ISO 27001" },
      { "id": "soc2", "name": "SOC 2" },
      { "id": "pci_dss", "name": "PCI DSS" },
      { "id": "gdpr", "name": "GDPR" },
      { "id": "hipaa", "name": "HIPAA" }
    ]
  },
  "api": {
    "base_url": "/api/v1",
    "endpoints": {
      "organizations": "/organizations",
      "scores": "/scores",
      "vendors": "/vendors",
      "risks": "/risks",
      "remediations": "/remediations",
      "reports": "/reports",
      "benchmarks": "/benchmarks"
    }
  }
}
