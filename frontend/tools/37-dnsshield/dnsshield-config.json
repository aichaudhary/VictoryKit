    "backend": 4037,
    "aiWebSocket": 6037,
    "dnsServer": 53,
    "doH": 443,
    "doT": 853
  },
  "database": {
    "name": "dnsshield_db",
    "collections": [
      "dns_queries",
      "blocked_domains",
      "threat_intelligence",
      "dns_policies",
      "dns_analytics",
      "domain_reputation",
      "dns_tunneling_logs",
      "resolver_cache",
      "dnssec_records",
      "user_settings"
    ]
  },
  "features": {
    "dnsProtection": {
      "enabled": true,
      "malwareDomainBlocking": true,
      "phishingProtection": true,
      "botnetDetection": true,
      "ransomwareProtection": true,
      "cryptominingBlocking": true,
      "adBlocking": true,
      "trackerBlocking": true,
      "adultContentFiltering": true
    },
    "dnsSecurity": {
      "enabled": true,
      "dnssec": true,
      "dnsOverHTTPS": true,
      "dnsOverTLS": true,
      "dnsCrypt": true,
      "tunnelDetection": true,
      "cachePoisoningProtection": true,
      "amplificationPrevention": true,
      "rateLimiting": true
    },
    "threatIntelligence": {
      "enabled": true,
      "realTimeFeeds": true,
      "domainReputation": true,
      "threatCategories": [
        "malware",
        "phishing",
        "botnet",
        "ransomware",
        "cryptomining",
        "spam",
        "adult",
        "gambling",
        "drugs"
      ],
      "feeds": [
        "abuse_ch",
        "spamhaus",
        "malwaredomains",
        "phishtank",
        "openphish",
        "urlhaus",
        "threatfox"
      ]
    },
    "dnsAnalytics": {
      "enabled": true,
      "queryLogging": true,
      "statisticsCollection": true,
      "topDomains": true,
      "queryTypes": true,
      "responseTime": true,
      "cacheHitRate": true,
      "failureAnalysis": true,
      "geographicDistribution": true
    },
    "privacyProtection": {
      "enabled": true,
      "queryMinimization": true,
      "eDNS": true,
      "noPersistentLogging": false,
      "anonymization": true,
      "doNotTrack": true
    },
    "customFiltering": {
      "enabled": true,
      "whitelists": true,
      "blacklists": true,
      "regex": true,
      "wildcards": true,
      "categories": true,
      "schedules": true
    }
  },
  "aiAssistant": {
    "enabled": true,
    "model": "gemini-1.5-pro",
    "wsPort": 6037,
    "functions": [
      {
        "name": "analyze_dns_query",
        "description": "Comprehensive DNS query analysis including threat detection, reputation scoring, and category classification",
        "parameters": {
          "domain": "string",
          "queryType": "string",
          "clientIP": "string",
          "includeHistory": "boolean"
        },
        "category": "Analysis"
      },
      {
        "name": "detect_dns_tunneling",
        "description": "Detect DNS tunneling attempts used for data exfiltration or C2 communication",
        "parameters": {
          "domain": "string",
          "queryPattern": "object",
          "sensitivity": "string"
        },
        "category": "Security"
      },
      {
        "name": "classify_domain_threat",
        "description": "Classify domain threat level and categorize based on multiple threat intelligence sources",
        "parameters": {
          "domain": "string",
          "checkSubdomains": "boolean",
          "deepAnalysis": "boolean"
        },
        "category": "Threat Intelligence"
      },
      {
        "name": "analyze_dnssec_status",
        "description": "Validate DNSSEC signatures and analyze DNS security configuration",
        "parameters": {
          "domain": "string",
          "verifyChain": "boolean",
          "checkAlgorithms": "boolean"
        },
        "category": "Security"
      },
      {
        "name": "generate_blocking_policy",
        "description": "Generate intelligent DNS blocking policies based on threat patterns and organization requirements",
        "parameters": {
          "organizationType": "string",
          "threatCategories": "array",
          "customRules": "array"
        },
        "category": "Policy Management"
      },
      {
        "name": "analyze_query_patterns",
        "description": "Analyze DNS query patterns to identify anomalies, trends, and potential security issues",
        "parameters": {
          "timeRange": "string",
          "clientFilter": "string",
          "includeBaseline": "boolean"
        },
        "category": "Analytics"
      },
      {
        "name": "detect_dga_domains",
        "description": "Detect Domain Generation Algorithm (DGA) domains used by malware for C2 communication",
        "parameters": {
          "domain": "string",
          "algorithmChecks": "array",
          "confidence": "number"
        },
        "category": "Threat Detection"
      },
      {
        "name": "analyze_cache_performance",
        "description": "Analyze DNS cache performance, hit rates, and optimization opportunities",
        "parameters": {
          "timeWindow": "string",
          "includeRecommendations": "boolean"
        },
        "category": "Performance"
      },
      {
        "name": "generate_threat_report",
        "description": "Generate comprehensive threat intelligence report with blocked queries, trends, and recommendations",
        "parameters": {
          "reportType": "string",
          "startDate": "string",
          "endDate": "string",
          "includeGraphs": "boolean"
        },
        "category": "Reporting"
      },
      {
        "name": "optimize_resolver_config",
        "description": "Analyze and recommend DNS resolver configuration optimizations for performance and security",
        "parameters": {
          "currentConfig": "object",
          "trafficProfile": "object",
          "goals": "array"
        },
        "category": "Optimization"
      }
    ]
  },
  "integrations": {
    "threatFeeds": [
      {
        "name": "Abuse.ch URLhaus",
        "type": "malware",
        "updateFrequency": "hourly",
        "enabled": true
      },
      {
        "name": "Spamhaus DBL",
        "type": "spam",
        "updateFrequency": "realtime",
        "enabled": true
      },
      {
        "name": "PhishTank",
        "type": "phishing",
        "updateFrequency": "hourly",
        "enabled": true
      },
      {
        "name": "OpenPhish",
        "type": "phishing",
        "updateFrequency": "hourly",
        "enabled": true
      }
    ],
    "siem": {
      "enabled": true,
      "formats": ["syslog", "json", "cef"],
      "destinations": ["splunk", "qradar", "sentinel"]
    },
    "monitoring": {
      "prometheus": true,
      "grafana": true,
      "elasticsearch": true
    }
  },
  "security": {
