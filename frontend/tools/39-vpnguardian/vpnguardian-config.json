{
  "toolInfo": {
    "id": 39,
    "name": "VPNGuardian",
    "displayName": "VPNGuardian - Secure VPN Management",
    "description": "AI-powered VPN security platform with traffic analysis, endpoint protection, split tunneling control, and zero-trust network access",
    "category": "Network Security",
    "version": "1.0.0",
    "icon": "üîê",
    "color": "#06b6d4",
    "theme": "cyan"
  },
  "deployment": {
    "subdomain": "vpnguardian",
    "domain": "maula.ai",
    "fullUrl": "https://vpnguardian.maula.ai",
    "aiAssistantUrl": "https://vpnguardian.maula.ai/maula-ai"
  },
  "ports": {
    "frontend": 3039,
    "backend": 4039,
    "aiWebSocket": 6039,
    "vpnGateway": 1194,
    "wireguard": 51820
  },
  "database": {
    "name": "vpnguardian_db",
    "collections": [
      "vpn_sessions",
      "vpn_users",
      "endpoints",
      "traffic_logs",
      "policies",
      "access_rules",
      "threat_events",
      "audit_logs",
      "certificates",
      "network_zones"
    ]
  },
  "features": {
    "vpnManagement": {
      "enabled": true,
      "protocols": ["OpenVPN", "WireGuard", "IKEv2", "L2TP"],
      "splitTunneling": true,
      "killSwitch": true,
      "dnsLeakProtection": true,
      "multiHop": true
    },
    "zeroTrust": {
      "enabled": true,
      "devicePosture": true,
      "continuousVerification": true,
      "leastPrivilege": true,
      "microsegmentation": true
    },
    "trafficAnalysis": {
      "enabled": true,
      "deepPacketInspection": true,
      "anomalyDetection": true,
      "bandwidthMonitoring": true,
      "applicationControl": true
    },
    "endpointSecurity": {
      "enabled": true,
      "deviceCompliance": true,
      "certificateManagement": true,
      "mfa": true,
      "biometricAuth": true
    }
  },
  "aiAssistant": {
    "enabled": true,
    "model": "gemini-1.5-pro",
    "wsPort": 6039,
    "functions": [
      {
        "name": "analyze_vpn_traffic",
        "description": "Analyze VPN traffic patterns, detect anomalies, and identify potential security threats",
        "parameters": {
          "sessionId": "string",
          "timeRange": "string",
          "includePayload": "boolean",
          "threatLevel": "string"
        },
        "category": "Analysis"
      },
      {
        "name": "assess_endpoint_security",
        "description": "Evaluate endpoint device security posture and compliance with access policies",
        "parameters": {
          "endpointId": "string",
          "checkType": "string",
          "strictMode": "boolean"
        },
        "category": "Security"
      },
      {
        "name": "generate_access_policy",
        "description": "Generate zero-trust access policies based on user roles and resource sensitivity",
        "parameters": {
          "userRole": "string",
          "resources": "array",
          "riskTolerance": "string",
          "timeConstraints": "object"
        },
        "category": "Policy"
      },
      {
        "name": "detect_tunnel_compromise",
        "description": "Detect VPN tunnel compromise, man-in-the-middle attacks, and session hijacking",
        "parameters": {
          "tunnelId": "string",
          "checkCertificates": "boolean",
          "deepAnalysis": "boolean"
        },
        "category": "Threat Detection"
      },
      {
        "name": "optimize_routing",
        "description": "Optimize VPN routing for performance while maintaining security policies",
        "parameters": {
          "sourceRegion": "string",
          "destinationZones": "array",
          "prioritizeSpeed": "boolean",
          "constraints": "object"
        },
        "category": "Optimization"
      },
      {
        "name": "audit_user_access",
        "description": "Audit user access patterns and flag suspicious connection behaviors",
        "parameters": {
          "userId": "string",
          "auditPeriod": "string",
          "includeGeoData": "boolean",
          "flagThreshold": "number"
        },
        "category": "Audit"
      },
      {
        "name": "manage_certificates",
        "description": "Manage VPN certificates including renewal, revocation, and rotation recommendations",
        "parameters": {
          "operation": "string",
          "certId": "string",
          "validity": "number",
          "keyStrength": "string"
        },
        "category": "Certificate Management"
      },
      {
        "name": "configure_split_tunnel",
        "description": "Configure split tunneling rules based on application requirements and security policies",
        "parameters": {
          "applications": "array",
          "domains": "array",
          "bypassLocal": "boolean",
          "securityLevel": "string"
        },
        "category": "Configuration"
      },
      {
        "name": "generate_threat_report",
        "description": "Generate comprehensive threat report with attack vectors, blocked threats, and recommendations",
        "parameters": {
          "reportType": "string",
          "startDate": "string",
          "endDate": "string",
          "includeRemediation": "boolean"
        },
        "category": "Reporting"
      },
      {
        "name": "enforce_compliance",
        "description": "Enforce compliance policies and generate deviation reports for regulatory requirements",
        "parameters": {
          "framework": "string",
          "scope": "array",
          "autoRemediate": "boolean",
          "notifyViolations": "boolean"
        },
        "category": "Compliance"
      }
    ]
  },
  "integrations": {
    "identity": ["okta", "azure-ad", "google-workspace", "ldap"],
    "siem": ["splunk", "elk", "chronicle", "sentinel"],
    "endpoint": ["crowdstrike", "carbon-black", "sentinelone"],
    "cloud": ["aws", "azure", "gcp"]
  },
  "security": {
    "encryption": {
      "atRest": true,
      "inTransit": true,
      "algorithm": "AES-256-GCM"
    },
    "authentication": {
      "mfa": true,
      "sso": true,
      "certificateBased": true,
      "biometric": true
    },
    "audit": {
      "enabled": true,
      "immutableLogs": true,
      "retentionDays": 365
    }
  },
  "performance": {
    "maxConnections": 100000,
    "throughput": "10Gbps",
    "latencyTarget": "5ms",
    "autoscaling": true
  },
  "compliance": {
    "frameworks": ["NIST 800-53", "SOC2", "ISO 27001", "GDPR", "HIPAA"],
    "certifications": ["FIPS 140-2", "Common Criteria"],
    "dataResidency": "configurable"
  }
}
