{
  "toolName": "PasswordVault",
  "tagline": "AI-Powered Enterprise Password & Secrets Management",
  "subdomain": "passwordvault.maula.ai",
  "port": 3033,
  "apiPort": 4033,
  "mlPort": 8033,
  "aiPort": 6033,
  "databaseName": "passwordvault_db",
  
  "theme": {
    "primaryColor": "#10b981",
    "secondaryColor": "#059669",
    "accentColor": "#34d399",
    "backgroundColor": "#0f172a",
    "surfaceColor": "#1e293b",
    "borderColor": "#334155",
    "textPrimary": "#f1f5f9",
    "textSecondary": "#94a3b8",
    "success": "#22c55e",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "info": "#3b82f6",
    "gradient": "linear-gradient(135deg, #10b981 0%, #059669 50%, #047857 100%)"
  },
  
  "navigation": [
    { "id": "dashboard", "label": "Dashboard", "icon": "LayoutDashboard", "path": "/" },
    { "id": "vaults", "label": "Vaults", "icon": "Lock", "path": "/vaults" },
    { "id": "secrets", "label": "Secrets", "icon": "Key", "path": "/secrets" },
    { "id": "password-generator", "label": "Password Generator", "icon": "Shuffle", "path": "/generator" },
    { "id": "security-audit", "label": "Security Audit", "icon": "ShieldCheck", "path": "/audit" },
    { "id": "sharing", "label": "Secure Sharing", "icon": "Share2", "path": "/sharing" },
    { "id": "teams", "label": "Teams & Access", "icon": "Users", "path": "/teams" },
    { "id": "activity", "label": "Activity Log", "icon": "Activity", "path": "/activity" },
    { "id": "settings", "label": "Settings", "icon": "Settings", "path": "/settings" },
    { "id": "maula-ai", "label": "Maula AI", "icon": "Brain", "path": "/maula/ai" }
  ],
  
  "secretTypes": [
    { "id": "password", "name": "Password", "icon": "KeyRound", "fields": ["username", "password", "url", "notes"] },
    { "id": "api-key", "name": "API Key", "icon": "Code", "fields": ["key", "secret", "endpoint", "notes"] },
    { "id": "certificate", "name": "Certificate", "icon": "FileKey", "fields": ["certificate", "privateKey", "chain", "expiry"] },
    { "id": "ssh-key", "name": "SSH Key", "icon": "Terminal", "fields": ["publicKey", "privateKey", "passphrase", "host"] },
    { "id": "database", "name": "Database", "icon": "Database", "fields": ["host", "port", "database", "username", "password"] },
    { "id": "token", "name": "Access Token", "icon": "Ticket", "fields": ["token", "refreshToken", "expiry", "scope"] },
    { "id": "credit-card", "name": "Payment Card", "icon": "CreditCard", "fields": ["cardNumber", "expiry", "cvv", "holderName"] },
    { "id": "identity", "name": "Identity Document", "icon": "IdCard", "fields": ["documentType", "number", "expiry", "issuer"] },
    { "id": "secure-note", "name": "Secure Note", "icon": "FileText", "fields": ["title", "content", "tags"] },
    { "id": "wifi", "name": "WiFi Credential", "icon": "Wifi", "fields": ["ssid", "password", "encryption", "hidden"] }
  ],
  
  "encryptionAlgorithms": [
    { "id": "aes-256-gcm", "name": "AES-256-GCM", "keySize": 256, "recommended": true },
    { "id": "chacha20-poly1305", "name": "ChaCha20-Poly1305", "keySize": 256, "recommended": true },
    { "id": "aes-256-cbc", "name": "AES-256-CBC", "keySize": 256, "recommended": false },
    { "id": "aes-192-gcm", "name": "AES-192-GCM", "keySize": 192, "recommended": false }
  ],
  
  "passwordStrength": {
    "levels": [
      { "score": 0, "label": "Very Weak", "color": "#ef4444", "minLength": 0 },
      { "score": 1, "label": "Weak", "color": "#f97316", "minLength": 6 },
      { "score": 2, "label": "Fair", "color": "#f59e0b", "minLength": 8 },
      { "score": 3, "label": "Good", "color": "#84cc16", "minLength": 10 },
      { "score": 4, "label": "Strong", "color": "#22c55e", "minLength": 12 },
      { "score": 5, "label": "Very Strong", "color": "#10b981", "minLength": 16 }
    ],
    "requirements": {
      "minLength": 12,
      "maxLength": 128,
      "requireUppercase": true,
      "requireLowercase": true,
      "requireNumbers": true,
      "requireSymbols": true,
      "noRepeatingChars": 3,
      "noSequentialChars": 3,
      "noCommonWords": true
    }
  },
  
  "vaultTypes": [
    { "id": "personal", "name": "Personal", "icon": "User", "description": "Private vault for individual use" },
    { "id": "team", "name": "Team", "icon": "Users", "description": "Shared vault for team collaboration" },
    { "id": "shared", "name": "Shared", "icon": "Share2", "description": "Vault with specific user access" },
    { "id": "enterprise", "name": "Enterprise", "icon": "Building2", "description": "Organization-wide vault with RBAC" }
  ],
  
  "accessRoles": [
    { "id": "owner", "name": "Owner", "permissions": ["read", "write", "delete", "share", "manage"] },
    { "id": "admin", "name": "Admin", "permissions": ["read", "write", "delete", "share"] },
    { "id": "editor", "name": "Editor", "permissions": ["read", "write"] },
    { "id": "viewer", "name": "Viewer", "permissions": ["read"] }
  ],
  
  "securityPolicies": {
    "mfa": {
      "methods": ["totp", "sms", "email", "hardware-key", "biometric"],
      "enforcementLevels": ["optional", "recommended", "required"]
    },
    "sessionManagement": {
      "maxSessionDuration": 86400,
      "idleTimeout": 1800,
      "maxConcurrentSessions": 5
    },
    "passwordPolicy": {
      "maxAge": 90,
      "minAge": 1,
      "historyCount": 12,
      "lockoutThreshold": 5,
      "lockoutDuration": 1800
    }
  },
  
  "systemPrompt": "You are PasswordVault AI, an expert in enterprise password and secrets management with deep knowledge of cryptography, secure storage, access control, and credential lifecycle management. You help users:\n\n1. Generate strong, unique passwords using cryptographically secure methods\n2. Organize and manage secrets in vaults with proper categorization\n3. Assess password strength and identify security vulnerabilities\n4. Implement secure sharing with role-based access control\n5. Rotate credentials on schedule and detect compromised passwords\n6. Audit access patterns and detect suspicious activity\n7. Comply with security policies (NIST, SOC2, ISO 27001)\n8. Configure encryption settings and key management\n9. Manage team access and permissions\n10. Recover accounts and implement emergency access\n\nProvide clear, actionable security advice. Explain encryption concepts simply. Never display actual passwords in plain text. Always prioritize security best practices.",
  
  "functions": [
    {
      "name": "generate_password",
      "description": "Generate a cryptographically secure password with customizable requirements",
      "parameters": {
        "type": "object",
        "properties": {
          "length": { "type": "number", "description": "Password length (8-128 characters)", "minimum": 8, "maximum": 128 },
          "include_uppercase": { "type": "boolean", "description": "Include uppercase letters (A-Z)" },
          "include_lowercase": { "type": "boolean", "description": "Include lowercase letters (a-z)" },
          "include_numbers": { "type": "boolean", "description": "Include numbers (0-9)" },
          "include_symbols": { "type": "boolean", "description": "Include special characters (!@#$%^&*)" },
          "exclude_ambiguous": { "type": "boolean", "description": "Exclude ambiguous characters (0O1lI)" },
          "exclude_similar": { "type": "boolean", "description": "Exclude similar characters" },
          "custom_symbols": { "type": "string", "description": "Custom symbol set to use" },
          "pronounceable": { "type": "boolean", "description": "Generate pronounceable password" },
          "passphrase": { "type": "boolean", "description": "Generate passphrase instead of password" },
          "word_count": { "type": "number", "description": "Number of words for passphrase (3-10)" }
        },
        "required": ["length"]
      }
    },
    {
      "name": "create_vault",
      "description": "Create a new secure vault for storing secrets",
      "parameters": {
        "type": "object",
        "properties": {
          "name": { "type": "string", "description": "Vault name" },
          "type": { "type": "string", "enum": ["personal", "team", "shared", "enterprise"], "description": "Vault type" },
          "description": { "type": "string", "description": "Vault description" },
          "encryption_algorithm": { "type": "string", "enum": ["aes-256-gcm", "chacha20-poly1305"], "description": "Encryption algorithm" },
          "require_mfa": { "type": "boolean", "description": "Require MFA to access vault" },
          "auto_lock_timeout": { "type": "number", "description": "Auto-lock timeout in minutes" },
          "tags": { "type": "array", "items": { "type": "string" }, "description": "Vault tags for organization" }
        },
        "required": ["name", "type"]
      }
    },
    {
      "name": "store_secret",
      "description": "Store a new secret in a vault with encryption",
      "parameters": {
        "type": "object",
        "properties": {
          "vault_id": { "type": "string", "description": "Target vault ID" },
          "name": { "type": "string", "description": "Secret name/title" },
          "type": { "type": "string", "enum": ["password", "api-key", "certificate", "ssh-key", "database", "token", "credit-card", "identity", "secure-note", "wifi"], "description": "Type of secret" },
          "username": { "type": "string", "description": "Username if applicable" },
          "password": { "type": "string", "description": "Password or secret value (will be encrypted)" },
          "url": { "type": "string", "description": "Associated URL" },
          "notes": { "type": "string", "description": "Additional notes" },
          "tags": { "type": "array", "items": { "type": "string" }, "description": "Tags for categorization" },
          "expires_at": { "type": "string", "description": "Expiration date (ISO 8601)" }
        },
        "required": ["vault_id", "name", "type"]
      }
    },
    {
      "name": "assess_password_strength",
      "description": "Analyze password strength and provide improvement suggestions",
      "parameters": {
        "type": "object",
        "properties": {
          "password_hash": { "type": "string", "description": "SHA-256 hash of password (never send plain text)" },
          "check_breach": { "type": "boolean", "description": "Check against known breach databases" },
          "check_patterns": { "type": "boolean", "description": "Analyze for common patterns" },
          "check_dictionary": { "type": "boolean", "description": "Check against dictionary words" }
        },
        "required": ["password_hash"]
      }
    },
    {
      "name": "security_audit",
      "description": "Perform comprehensive security audit on vaults and secrets",
      "parameters": {
        "type": "object",
        "properties": {
          "vault_id": { "type": "string", "description": "Specific vault to audit (optional for all vaults)" },
          "audit_type": { "type": "string", "enum": ["full", "password-health", "access-review", "expiry-check", "breach-detection", "compliance"], "description": "Type of audit" },
          "include_recommendations": { "type": "boolean", "description": "Include actionable recommendations" },
          "compliance_framework": { "type": "string", "enum": ["NIST", "SOC2", "ISO27001", "PCI-DSS", "HIPAA"], "description": "Compliance framework to check against" }
        },
        "required": ["audit_type"]
      }
    },
    {
      "name": "share_secret",
      "description": "Securely share a secret with another user or team",
      "parameters": {
        "type": "object",
        "properties": {
          "secret_id": { "type": "string", "description": "Secret to share" },
          "recipient_type": { "type": "string", "enum": ["user", "team", "email"], "description": "Type of recipient" },
          "recipient_id": { "type": "string", "description": "User ID, team ID, or email address" },
          "permission": { "type": "string", "enum": ["view", "edit", "admin"], "description": "Permission level" },
          "expires_at": { "type": "string", "description": "Share expiration (ISO 8601)" },
          "max_views": { "type": "number", "description": "Maximum number of views allowed" },
          "require_mfa": { "type": "boolean", "description": "Require MFA to access shared secret" }
        },
        "required": ["secret_id", "recipient_type", "recipient_id", "permission"]
      }
    },
    {
      "name": "rotate_credentials",
      "description": "Rotate credentials and update stored secrets",
      "parameters": {
        "type": "object",
        "properties": {
          "secret_id": { "type": "string", "description": "Secret to rotate" },
          "new_password": { "type": "string", "description": "New password (or auto-generate if not provided)" },
          "update_integrations": { "type": "boolean", "description": "Automatically update connected integrations" },
          "notify_users": { "type": "boolean", "description": "Notify users with access about rotation" },
          "keep_history": { "type": "boolean", "description": "Keep previous version in history" }
        },
        "required": ["secret_id"]
      }
    },
    {
      "name": "manage_access",
      "description": "Manage user and team access to vaults and secrets",
      "parameters": {
        "type": "object",
        "properties": {
          "resource_type": { "type": "string", "enum": ["vault", "secret"], "description": "Type of resource" },
          "resource_id": { "type": "string", "description": "Resource ID" },
          "action": { "type": "string", "enum": ["grant", "revoke", "modify"], "description": "Access action" },
          "target_type": { "type": "string", "enum": ["user", "team", "role"], "description": "Target type" },
          "target_id": { "type": "string", "description": "Target ID" },
          "role": { "type": "string", "enum": ["owner", "admin", "editor", "viewer"], "description": "Role to assign" }
        },
        "required": ["resource_type", "resource_id", "action", "target_type", "target_id"]
      }
    },
    {
      "name": "get_activity_log",
      "description": "Retrieve activity logs for audit and monitoring",
      "parameters": {
        "type": "object",
        "properties": {
          "resource_type": { "type": "string", "enum": ["vault", "secret", "user", "all"], "description": "Filter by resource type" },
          "resource_id": { "type": "string", "description": "Specific resource ID" },
          "action_type": { "type": "string", "enum": ["create", "read", "update", "delete", "share", "access", "all"], "description": "Filter by action" },
          "user_id": { "type": "string", "description": "Filter by user" },
          "start_date": { "type": "string", "description": "Start date (ISO 8601)" },
          "end_date": { "type": "string", "description": "End date (ISO 8601)" },
          "limit": { "type": "number", "description": "Maximum entries to return" }
        },
        "required": []
      }
    },
    {
      "name": "emergency_access",
      "description": "Configure or trigger emergency access procedures",
      "parameters": {
        "type": "object",
        "properties": {
          "action": { "type": "string", "enum": ["configure", "request", "approve", "revoke"], "description": "Emergency access action" },
          "vault_id": { "type": "string", "description": "Vault for emergency access" },
          "trusted_contact_id": { "type": "string", "description": "Trusted contact for access" },
          "waiting_period": { "type": "number", "description": "Waiting period in hours before access granted" },
          "reason": { "type": "string", "description": "Reason for emergency access request" }
        },
        "required": ["action"]
      }
    }
  ],
  
  "integrations": [
    { "id": "browser-extension", "name": "Browser Extension", "icon": "Globe", "platforms": ["chrome", "firefox", "safari", "edge"] },
    { "id": "cli", "name": "CLI Tool", "icon": "Terminal", "platforms": ["macos", "linux", "windows"] },
    { "id": "mobile", "name": "Mobile App", "icon": "Smartphone", "platforms": ["ios", "android"] },
    { "id": "desktop", "name": "Desktop App", "icon": "Monitor", "platforms": ["macos", "linux", "windows"] },
    { "id": "slack", "name": "Slack", "icon": "MessageSquare", "type": "notification" },
    { "id": "ldap", "name": "LDAP/AD", "icon": "Server", "type": "sso" },
    { "id": "okta", "name": "Okta", "icon": "Shield", "type": "sso" },
    { "id": "github", "name": "GitHub", "icon": "Github", "type": "secrets-sync" },
    { "id": "aws", "name": "AWS Secrets Manager", "icon": "Cloud", "type": "secrets-sync" },
    { "id": "vault", "name": "HashiCorp Vault", "icon": "Lock", "type": "secrets-sync" }
  ],
  
  "complianceFrameworks": [
    { "id": "nist", "name": "NIST SP 800-63", "description": "Digital Identity Guidelines" },
    { "id": "soc2", "name": "SOC 2 Type II", "description": "Service Organization Control" },
    { "id": "iso27001", "name": "ISO 27001", "description": "Information Security Management" },
    { "id": "pci-dss", "name": "PCI-DSS", "description": "Payment Card Industry Data Security Standard" },
    { "id": "hipaa", "name": "HIPAA", "description": "Health Insurance Portability and Accountability Act" },
    { "id": "gdpr", "name": "GDPR", "description": "General Data Protection Regulation" }
  ],
  
  "features": {
    "zeroKnowledge": true,
    "clientSideEncryption": true,
    "passwordBreachMonitoring": true,
    "biometricUnlock": true,
    "hardwareKeySupport": true,
    "offlineAccess": true,
    "autoFill": true,
    "secureNotes": true,
    "fileAttachments": true,
    "customFields": true,
    "twoFactorAuth": true,
    "emergencyAccess": true,
    "passwordHistory": true,
    "auditLogs": true,
    "roleBasedAccess": true,
    "secureSharing": true,
    "passwordGenerator": true,
    "importExport": true,
    "apiAccess": true,
    "ssoIntegration": true
  }
}
