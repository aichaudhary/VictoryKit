{
  "toolInfo": {
    "id": 40,
    "name": "WirelessWatch",
    "displayName": "WirelessWatch - Wireless Security Monitor",
    "description": "AI-powered wireless network security platform with rogue AP detection, WiFi vulnerability scanning, RF spectrum analysis, and wireless intrusion prevention",
    "category": "Network Security",
    "version": "1.0.0",
    "icon": "ðŸ“¡",
    "color": "#8b5cf6",
    "theme": "violet"
  },
  "deployment": {
    "subdomain": "wirelesswatch",
    "domain": "maula.ai",
    "fullUrl": "https://wirelesswatch.maula.ai",
    "aiAssistantUrl": "https://wirelesswatch.maula.ai/maula/ai"
  },
  "ports": {
    "frontend": 3040,
    "backend": 4040,
    "aiWebSocket": 6040,
    "snmp": 161,
    "syslog": 514
  },
  "database": {
    "name": "wirelesswatch_db",
    "collections": [
      "access_points",
      "clients",
      "rf_scans",
      "rogue_devices",
      "security_events",
      "wips_alerts",
      "spectrum_data",
      "policies",
      "vulnerabilities",
      "audit_logs"
    ]
  },
  "features": {
    "apManagement": {
      "enabled": true,
      "monitoring": true,
      "configuration": true,
      "firmwareManagement": true,
      "heatMapping": true
    },
    "rogueDetection": {
      "enabled": true,
      "autoClassification": true,
      "containment": true,
      "alerting": true,
      "geoLocation": true
    },
    "spectrumAnalysis": {
      "enabled": true,
      "rfInterference": true,
      "channelOptimization": true,
      "noiseFloor": true,
      "dutyCycle": true
    },
    "wips": {
      "enabled": true,
      "deauthProtection": true,
      "evilTwinDetection": true,
      "karmaAttackPrevention": true,
      "autoContainment": true
    },
    "vulnerability": {
      "enabled": true,
      "wpaVulnerabilities": true,
      "krackDetection": true,
      "fragAttack": true,
      "dragonblood": true
    }
  },
  "aiAssistant": {
    "enabled": true,
    "model": "gemini-1.5-pro",
    "wsPort": 6040,
    "functions": [
      {
        "name": "scan_rf_spectrum",
        "description": "Perform RF spectrum analysis to detect interference, rogue signals, and optimize channel allocation",
        "parameters": {
          "band": "string",
          "channels": "array",
          "duration": "number",
          "sensitivity": "string"
        },
        "category": "Analysis"
      },
      {
        "name": "detect_rogue_aps",
        "description": "Scan for and classify rogue access points, evil twins, and unauthorized wireless devices",
        "parameters": {
          "scanArea": "string",
          "deepScan": "boolean",
          "includeClients": "boolean",
          "classificationLevel": "string"
        },
        "category": "Detection"
      },
      {
        "name": "assess_wifi_security",
        "description": "Evaluate wireless network security posture including encryption, authentication, and known vulnerabilities",
        "parameters": {
          "ssid": "string",
          "bssid": "string",
          "checkVulnerabilities": "boolean",
          "pentestMode": "boolean"
        },
        "category": "Security"
      },
      {
        "name": "optimize_channel_plan",
        "description": "Generate optimized channel allocation plan to minimize interference and maximize performance",
        "parameters": {
          "site": "string",
          "constraints": "object",
          "prioritizeDensity": "boolean",
          "dfsAllowed": "boolean"
        },
        "category": "Optimization"
      },
      {
        "name": "investigate_client",
        "description": "Investigate wireless client behavior, connection history, and potential security risks",
        "parameters": {
          "macAddress": "string",
          "timeRange": "string",
          "includeRoaming": "boolean",
          "threatAnalysis": "boolean"
        },
        "category": "Investigation"
      },
      {
        "name": "contain_rogue_device",
        "description": "Initiate containment actions against rogue or malicious wireless devices",
        "parameters": {
          "targetBssid": "string",
          "containmentMethod": "string",
          "duration": "number",
          "logActions": "boolean"
        },
        "category": "Response"
      },
      {
        "name": "generate_heatmap",
        "description": "Generate RF coverage and signal strength heatmap for site survey analysis",
        "parameters": {
          "floorPlan": "string",
          "band": "string",
          "metric": "string",
          "resolution": "string"
        },
        "category": "Visualization"
      },
      {
        "name": "audit_compliance",
        "description": "Audit wireless network compliance against security standards and organizational policies",
        "parameters": {
          "framework": "string",
          "scope": "array",
          "includeRemediation": "boolean"
        },
        "category": "Compliance"
      },
      {
        "name": "analyze_attack_patterns",
        "description": "Analyze detected attack patterns including deauth floods, PMKID attacks, and handshake captures",
        "parameters": {
          "eventId": "string",
          "correlateEvents": "boolean",
          "attributeSource": "boolean",
          "generateIocs": "boolean"
        },
        "category": "Threat Intelligence"
      },
      {
        "name": "generate_security_report",
        "description": "Generate comprehensive wireless security assessment report with findings and recommendations",
        "parameters": {
          "reportType": "string",
          "startDate": "string",
          "endDate": "string",
          "includeExecutiveSummary": "boolean"
        },
        "category": "Reporting"
      }
    ]
  },
  "integrations": {
    "apVendors": ["cisco", "aruba", "meraki", "ubiquiti", "ruckus", "fortinet"],
    "siem": ["splunk", "elk", "qradar", "sentinel"],
    "nac": ["cisco-ise", "aruba-clearpass", "forescout"],
    "management": ["dna-center", "airwave", "cloud-controller"]
  },
  "security": {
    "encryption": {
      "atRest": true,
      "inTransit": true,
      "algorithm": "AES-256-GCM"
    },
    "wifiStandards": ["WPA3-Enterprise", "WPA3-Personal", "WPA2-Enterprise", "802.1X"],
    "authentication": {
      "eapTypes": ["EAP-TLS", "PEAP", "EAP-TTLS"],
      "radiusIntegration": true,
      "certificateBased": true
    }
  },
  "performance": {
    "maxManagedAPs": 10000,
    "maxClientsMonitored": 500000,
    "scanFrequency": "continuous",
    "alertLatency": "< 1s"
  },
  "compliance": {
    "frameworks": ["PCI-DSS 4.0", "HIPAA", "SOC2", "NIST 800-153"],
    "wirelessPolicies": ["WPA3 required", "Open networks prohibited", "Rogue AP containment"],
    "auditRetention": 365
  }
}
