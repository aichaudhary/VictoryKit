    "automation": [
      "Scheduled Scanning",
      "Continuous Monitoring",
      "Auto-Discovery",
      "Remediation Workflows",
      "JIRA Integration",
      "Slack Notifications",
      "Email Alerts",
      "Webhook Callbacks"
