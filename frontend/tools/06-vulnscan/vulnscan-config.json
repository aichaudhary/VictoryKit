      "id": "web_application",
      "name": "Web Application Scan",
      "description": "OWASP-compliant web security testing",
      "icon": "globe",
      "techniques": [
        "SQL Injection Detection",
        "XSS Detection",
        "CSRF Testing",
        "Authentication Bypass",
        "Session Management",
        "Input Validation",
        "Directory Traversal",
        "File Inclusion"
      ],
      "crawlDepth": 5,
      "timeout": 7200
    },
    "container": {
      "id": "container",
      "name": "Container Scan",
      "description": "Docker and Kubernetes vulnerability analysis",
      "icon": "docker",
      "techniques": [
        "Image Layer Analysis",
        "Base Image Vulnerabilities",
        "Configuration Audit",
        "Secrets Detection",
        "Runtime Security"
      ],
      "registries": ["docker.io", "gcr.io", "ecr", "acr"]
    },
    "cloud": {
      "id": "cloud",
      "name": "Cloud Security Scan",
      "description": "Multi-cloud security assessment",
      "icon": "cloud",
      "providers": ["AWS", "Azure", "GCP", "OCI"],
      "checks": [
        "IAM Misconfigurations",
        "Network Security Groups",
        "Storage Permissions",
        "Encryption Settings",
        "Logging Configuration",
        "Resource Exposure"
      ]
    },
    "api": {
      "id": "api",
      "name": "API Security Scan",
      "description": "REST and GraphQL API testing",
      "icon": "code",
      "techniques": [
        "Authentication Testing",
        "Authorization Bypass",
        "Rate Limiting",
        "Input Fuzzing",
        "Schema Validation",
        "BOLA Detection"
      ]
