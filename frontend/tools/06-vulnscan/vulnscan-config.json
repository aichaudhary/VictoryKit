{
  "tool": {
    "id": "06-vulnscan",
    "name": "VulnScan",
    "fullName": "Enterprise Vulnerability Scanner",
    "version": "1.0.0",
    "description": "Comprehensive vulnerability scanning platform with AI-powered risk assessment, CVE correlation, and automated remediation tracking",
    "category": "Vulnerability Management",
    "icon": "shield-exclamation",
    "color": "#FF5722",
    "gradient": ["#FF5722", "#E64A19"]
  },

  "deployment": {
    "domain": "vulnscan.maula.ai",
    "ports": {
      "frontend": 3006,
      "backend": 4006,
      "websocket": 6006,
      "mlEngine": 8006
    },
    "database": {
      "name": "vulnscan_db",
      "collections": [
        "vulnerabilities",
        "assets",
        "scans",
        "scanresults",
        "remediations",
        "policies",
        "reports",
        "integrations",
        "cvecache",
        "scheduledscans",
        "scanprofiles",
        "exploits"
      ]
    }
  },

  "features": {
    "core": [
      "Network Vulnerability Scanning",
      "Web Application Security Testing",
      "Container Image Analysis",
      "Cloud Infrastructure Assessment",
      "API Security Testing",
      "Authenticated Scanning",
      "Compliance Checking",
      "Asset Discovery"
    ],
    "advanced": [
      "CVE Correlation Engine",
      "Exploit Database Integration",
      "CVSS v3.1 Scoring",
      "AI Risk Prediction",
      "Zero-Day Detection",
      "False Positive Reduction",
      "Trend Analysis",
      "Attack Surface Mapping"
