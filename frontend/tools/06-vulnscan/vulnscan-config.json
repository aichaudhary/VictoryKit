  "severityLevels": {
    "critical": {
      "level": 5,
      "name": "Critical",
      "color": "#DC2626",
      "cvssRange": [9.0, 10.0],
      "slaHours": 24,
      "description": "Immediate action required - system compromise likely"
    },
    "high": {
      "level": 4,
      "name": "High",
      "color": "#EA580C",
      "cvssRange": [7.0, 8.9],
      "slaHours": 72,
