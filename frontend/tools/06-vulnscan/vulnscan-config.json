  "mlModels": {
    "riskPrediction": {
      "name": "Vulnerability Risk Predictor",
      "type": "classification",
      "features": ["cvss", "exploitability", "asset_criticality", "exposure", "age"],
      "output": ["risk_level", "confidence"]
    },
    "falsePositiveDetection": {
      "name": "False Positive Detector",
      "type": "classification",
      "features": ["vulnerability_type", "context", "historical_fp"],
      "output": ["is_false_positive", "confidence"]
    },
    "prioritization": {
      "name": "Remediation Prioritizer",
      "type": "ranking",
      "features": ["severity", "exploitability", "asset_value", "ease_of_fix"],
      "output": ["priority_score", "recommended_order"]
    },
    "trendPrediction": {
      "name": "Vulnerability Trend Predictor",
      "type": "regression",
      "features": ["historical_counts", "patch_rate", "new_asset_rate"],
      "output": ["predicted_count", "trend_direction"]
    },
    "exploitPrediction": {
      "name": "Exploit Likelihood Predictor",
      "type": "classification",
      "features": ["cve_age", "vendor", "product_popularity", "disclosure_source"],
      "output": ["exploit_likelihood", "time_to_exploit"]
    }
  },

  "api": {
    "version": "v1",
    "basePath": "/api/v1/vulnscan",
    "rateLimit": {
      "requests": 1000,
      "window": "1h"
    },
    "endpoints": {
      "scans": {
        "prefix": "/scans",
        "operations": ["list", "create", "get", "cancel", "rerun", "compare"]
      },
      "vulnerabilities": {
        "prefix": "/vulnerabilities",
        "operations": ["list", "get", "update", "export", "correlate"]
      },
      "assets": {
        "prefix": "/assets",
        "operations": ["list", "create", "get", "update", "delete", "import", "discover"]
      },
      "reports": {
        "prefix": "/reports",
        "operations": ["generate", "list", "get", "schedule", "export"]
      },
      "schedules": {
        "prefix": "/schedules",
        "operations": ["list", "create", "get", "update", "delete", "enable", "disable"]
      },
      "remediations": {
        "prefix": "/remediations",
        "operations": ["list", "create", "update", "verify", "statistics"]
      },
      "integrations": {
        "prefix": "/integrations",
        "operations": ["list", "configure", "test", "sync"]
      },
      "dashboard": {
        "prefix": "/dashboard",
        "operations": ["overview", "trends", "risk-score", "widgets"]
      }
    }
  },

  "security": {
    "authentication": ["jwt", "api_key", "oauth2"],
    "authorization": {
      "roles": ["admin", "security_analyst", "developer", "viewer", "api_only"],
      "permissions": [
        "scans:create",
        "scans:read",
        "scans:manage",
        "vulnerabilities:read",
        "vulnerabilities:update",
        "vulnerabilities:export",
        "assets:create",
        "assets:read",
        "assets:update",
        "assets:delete",
        "reports:create",
        "reports:read",
        "settings:manage",
        "integrations:manage"
      ]
    },
    "dataProtection": {
      "encryption": "AES-256",
      "credentialStorage": "vault",
