{
  "toolName": "BiometricAI",
  "tagline": "AI-Powered Multi-Modal Biometric Authentication",
  "subdomain": "biometricai.maula.ai",
  "port": 3034,
  "apiPort": 4034,
  "mlPort": 8034,
  "aiPort": 6034,
  "databaseName": "biometricai_db",
  
  "theme": {
    "primaryColor": "#8b5cf6",
    "secondaryColor": "#7c3aed",
    "accentColor": "#a78bfa",
    "backgroundColor": "#0f172a",
    "surfaceColor": "#1e293b",
    "borderColor": "#334155",
    "textPrimary": "#f1f5f9",
    "textSecondary": "#94a3b8",
    "success": "#22c55e",
    "warning": "#f59e0b",
    "error": "#ef4444",
    "info": "#3b82f6",
    "gradient": "linear-gradient(135deg, #8b5cf6 0%, #7c3aed 50%, #6d28d9 100%)"
  },
  
  "navigation": [
    { "id": "dashboard", "label": "Dashboard", "icon": "LayoutDashboard", "path": "/" },
    { "id": "enrollment", "label": "Enrollment", "icon": "UserPlus", "path": "/enrollment" },
    { "id": "authentication", "label": "Authentication", "icon": "ShieldCheck", "path": "/authentication" },
    { "id": "face-recognition", "label": "Face Recognition", "icon": "Scan", "path": "/face" },
    { "id": "fingerprint", "label": "Fingerprint", "icon": "Fingerprint", "path": "/fingerprint" },
    { "id": "voice-auth", "label": "Voice Auth", "icon": "Mic", "path": "/voice" },
    { "id": "behavioral", "label": "Behavioral", "icon": "Activity", "path": "/behavioral" },
    { "id": "sessions", "label": "Sessions", "icon": "Clock", "path": "/sessions" },
    { "id": "analytics", "label": "Analytics", "icon": "BarChart3", "path": "/analytics" },
    { "id": "settings", "label": "Settings", "icon": "Settings", "path": "/settings" },
    { "id": "maula-ai", "label": "Maula AI", "icon": "Brain", "path": "/maula/ai" }
  ],
  
  "biometricModalities": [
    {
      "id": "face",
      "name": "Face Recognition",
      "icon": "Scan",
      "description": "3D facial recognition with liveness detection",
      "features": ["liveness_detection", "anti_spoofing", "emotion_detection", "age_verification", "mask_detection"],
      "accuracy": 99.97,
      "enrollmentTime": "5-10 seconds"
    },
    {
      "id": "fingerprint",
      "name": "Fingerprint",
      "icon": "Fingerprint",
      "description": "Multi-finger scanning with spoof detection",
      "features": ["multi_finger", "quality_check", "fake_finger_detection", "latent_print_matching"],
      "accuracy": 99.99,
      "enrollmentTime": "10-15 seconds"
    },
    {
      "id": "voice",
      "name": "Voice Recognition",
      "icon": "Mic",
      "description": "Text-dependent and text-independent voice auth",
      "features": ["text_dependent", "text_independent", "noise_cancellation", "replay_attack_detection"],
      "accuracy": 99.5,
      "enrollmentTime": "20-30 seconds"
    },
    {
      "id": "iris",
      "name": "Iris Recognition",
      "icon": "Eye",
      "description": "High-security iris pattern recognition",
      "features": ["dual_eye", "anti_reflection", "contact_lens_detection", "pupil_tracking"],
      "accuracy": 99.999,
      "enrollmentTime": "5-10 seconds"
    },
    {
      "id": "behavioral",
      "name": "Behavioral Biometrics",
      "icon": "Activity",
      "description": "Continuous authentication via behavior patterns",
      "features": ["keystroke_dynamics", "mouse_movement", "gait_analysis", "device_handling"],
      "accuracy": 95,
      "enrollmentTime": "Continuous learning"
    },
    {
      "id": "palm",
      "name": "Palm Vein",
      "icon": "Hand",
      "description": "Contactless palm vein pattern recognition",
      "features": ["vein_pattern", "anti_spoofing", "liveness_detection", "hygiene_friendly"],
      "accuracy": 99.99,
      "enrollmentTime": "10-15 seconds"
    }
  ],
  
  "authenticationModes": [
    { "id": "single", "name": "Single-Factor", "description": "One biometric modality" },
    { "id": "multi", "name": "Multi-Factor", "description": "Multiple biometric modalities combined" },
    { "id": "adaptive", "name": "Adaptive", "description": "Risk-based authentication" },
    { "id": "continuous", "name": "Continuous", "description": "Ongoing behavioral verification" }
  ],
  
  "securityFeatures": {
    "livenessDetection": {
      "enabled": true,
      "methods": ["3d_depth", "eye_blink", "head_movement", "texture_analysis", "blood_flow"]
    },
    "antiSpoofing": {
      "enabled": true,
      "protections": ["photo_attack", "video_attack", "mask_attack", "deepfake_detection", "synthetic_media"]
    },
    "encryption": {
      "templateEncryption": "AES-256-GCM",
      "transmissionEncryption": "TLS 1.3",
      "keyManagement": "HSM-backed"
    },
    "privacy": {
      "templateStorage": "on_device",
      "dataMinimization": true,
      "rightToDelete": true,
      "consentManagement": true
    }
  },
  
  "matchingThresholds": {
    "face": { "low": 0.75, "medium": 0.85, "high": 0.95, "default": 0.85 },
    "fingerprint": { "low": 0.80, "medium": 0.90, "high": 0.98, "default": 0.90 },
    "voice": { "low": 0.70, "medium": 0.80, "high": 0.92, "default": 0.80 },
    "iris": { "low": 0.85, "medium": 0.95, "high": 0.99, "default": 0.95 },
    "behavioral": { "low": 0.60, "medium": 0.75, "high": 0.90, "default": 0.75 }
  },
  
  "systemPrompt": "You are BiometricAI, an expert in multi-modal biometric authentication systems with deep knowledge of face recognition, fingerprint scanning, voice authentication, iris recognition, and behavioral biometrics. You help users:\n\n1. Enroll biometric templates securely across multiple modalities\n2. Configure authentication workflows with appropriate security levels\n3. Detect and prevent spoofing attacks (photos, videos, masks, deepfakes)\n4. Implement liveness detection to ensure live presence\n5. Analyze authentication patterns and detect anomalies\n6. Manage user biometric profiles and consent\n7. Configure multi-factor biometric authentication\n8. Troubleshoot matching failures and quality issues\n9. Ensure privacy compliance (GDPR, CCPA, BIPA)\n10. Optimize accuracy vs. usability trade-offs\n\nAlways prioritize privacy and security. Explain biometric concepts clearly. Recommend appropriate modalities based on use case.",
  
  "functions": [
    {
      "name": "enroll_biometric",
      "description": "Enroll a new biometric template for a user",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier" },
          "modality": { "type": "string", "enum": ["face", "fingerprint", "voice", "iris", "behavioral", "palm"], "description": "Biometric modality to enroll" },
          "quality_threshold": { "type": "number", "description": "Minimum quality score (0-100)" },
          "liveness_check": { "type": "boolean", "description": "Enable liveness detection during enrollment" },
          "anti_spoofing": { "type": "boolean", "description": "Enable anti-spoofing checks" }
        },
        "required": ["user_id", "modality"]
      }
    },
    {
      "name": "authenticate_user",
      "description": "Authenticate a user using biometric data",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier (optional for 1:N identification)" },
          "modality": { "type": "string", "enum": ["face", "fingerprint", "voice", "iris", "behavioral", "palm"], "description": "Biometric modality" },
          "mode": { "type": "string", "enum": ["verify", "identify"], "description": "1:1 verification or 1:N identification" },
          "threshold": { "type": "string", "enum": ["low", "medium", "high"], "description": "Security threshold" },
          "require_liveness": { "type": "boolean", "description": "Require liveness detection" }
        },
        "required": ["modality"]
      }
    },
    {
      "name": "configure_mfa",
      "description": "Configure multi-factor biometric authentication",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier" },
          "modalities": { "type": "array", "items": { "type": "string" }, "description": "Required biometric modalities" },
          "combination_mode": { "type": "string", "enum": ["all", "any", "weighted"], "description": "How to combine modalities" },
          "weights": { "type": "object", "description": "Weights for each modality (for weighted mode)" },
          "fallback_enabled": { "type": "boolean", "description": "Allow fallback to single modality" }
        },
        "required": ["user_id", "modalities"]
      }
    },
    {
      "name": "detect_spoof",
      "description": "Analyze biometric sample for spoofing attempts",
      "parameters": {
        "type": "object",
        "properties": {
          "sample_id": { "type": "string", "description": "Sample identifier" },
          "modality": { "type": "string", "enum": ["face", "fingerprint", "voice", "iris"], "description": "Biometric modality" },
          "check_types": { "type": "array", "items": { "type": "string" }, "description": "Spoof types to check: photo, video, mask, deepfake, synthetic" }
        },
        "required": ["sample_id", "modality"]
      }
    },
    {
      "name": "analyze_quality",
      "description": "Analyze biometric sample quality",
      "parameters": {
        "type": "object",
        "properties": {
          "sample_id": { "type": "string", "description": "Sample identifier" },
          "modality": { "type": "string", "enum": ["face", "fingerprint", "voice", "iris"], "description": "Biometric modality" },
          "provide_recommendations": { "type": "boolean", "description": "Include quality improvement recommendations" }
        },
        "required": ["sample_id", "modality"]
      }
    },
    {
      "name": "get_sessions",
      "description": "Retrieve authentication session history for a user",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier" },
          "modality": { "type": "string", "description": "Filter by modality" },
          "status": { "type": "string", "enum": ["success", "failure", "suspicious"], "description": "Filter by status" },
          "start_date": { "type": "string", "description": "Start date (ISO 8601)" },
          "end_date": { "type": "string", "description": "End date (ISO 8601)" },
          "limit": { "type": "number", "description": "Maximum sessions to return" }
        },
        "required": ["user_id"]
      }
    },
    {
      "name": "analyze_anomalies",
      "description": "Detect anomalous authentication patterns",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier (optional for system-wide)" },
          "time_period": { "type": "string", "enum": ["hour", "day", "week", "month"], "description": "Analysis period" },
          "anomaly_types": { "type": "array", "items": { "type": "string" }, "description": "Types: location, device, time, behavior, velocity" }
        },
        "required": ["time_period"]
      }
    },
    {
      "name": "manage_consent",
      "description": "Manage user biometric data consent",
      "parameters": {
        "type": "object",
        "properties": {
          "user_id": { "type": "string", "description": "User identifier" },
          "action": { "type": "string", "enum": ["grant", "revoke", "view", "export", "delete"], "description": "Consent action" },
          "modalities": { "type": "array", "items": { "type": "string" }, "description": "Affected modalities" },
          "purpose": { "type": "string", "description": "Purpose of consent" }
        },
        "required": ["user_id", "action"]
      }
    },
    {
      "name": "generate_report",
      "description": "Generate biometric authentication analytics report",
      "parameters": {
        "type": "object",
        "properties": {
          "report_type": { "type": "string", "enum": ["usage", "security", "quality", "compliance", "performance"], "description": "Type of report" },
          "time_period": { "type": "string", "enum": ["day", "week", "month", "quarter"], "description": "Report period" },
          "include_charts": { "type": "boolean", "description": "Include visualization data" },
          "format": { "type": "string", "enum": ["json", "pdf", "csv"], "description": "Output format" }
        },
        "required": ["report_type", "time_period"]
      }
    },
    {
      "name": "configure_liveness",
      "description": "Configure liveness detection settings",
      "parameters": {
        "type": "object",
        "properties": {
          "modality": { "type": "string", "enum": ["face", "voice", "iris"], "description": "Biometric modality" },
          "detection_level": { "type": "string", "enum": ["passive", "active", "challenge_response"], "description": "Liveness detection mode" },
          "challenges": { "type": "array", "items": { "type": "string" }, "description": "Active challenges: blink, smile, turn_head, speak_phrase" },
          "timeout": { "type": "number", "description": "Challenge timeout in seconds" }
        },
        "required": ["modality", "detection_level"]
      }
    }
  ],
  
  "integrations": [
    { "id": "fido2", "name": "FIDO2/WebAuthn", "icon": "Key", "type": "standard" },
    { "id": "active-directory", "name": "Active Directory", "icon": "Server", "type": "directory" },
    { "id": "okta", "name": "Okta", "icon": "Shield", "type": "idp" },
    { "id": "azure-ad", "name": "Azure AD", "icon": "Cloud", "type": "idp" },
    { "id": "aws-cognito", "name": "AWS Cognito", "icon": "Cloud", "type": "idp" },
    { "id": "mobile-sdk", "name": "Mobile SDK", "icon": "Smartphone", "type": "sdk" },
    { "id": "web-sdk", "name": "Web SDK", "icon": "Globe", "type": "sdk" },
    { "id": "physical-access", "name": "Physical Access Control", "icon": "DoorOpen", "type": "hardware" }
  ],
  
  "complianceFrameworks": [
    { "id": "gdpr", "name": "GDPR", "description": "EU General Data Protection Regulation" },
    { "id": "ccpa", "name": "CCPA", "description": "California Consumer Privacy Act" },
    { "id": "bipa", "name": "BIPA", "description": "Biometric Information Privacy Act" },
    { "id": "iso-24745", "name": "ISO 24745", "description": "Biometric Template Protection" },
    { "id": "iso-30107", "name": "ISO 30107", "description": "Presentation Attack Detection" },
    { "id": "nist-800-63b", "name": "NIST 800-63B", "description": "Digital Identity Guidelines" }
  ],
  
  "metrics": {
    "far": { "name": "False Accept Rate", "description": "Rate of accepting impostors", "target": 0.0001 },
    "frr": { "name": "False Reject Rate", "description": "Rate of rejecting genuine users", "target": 0.01 },
    "eer": { "name": "Equal Error Rate", "description": "Point where FAR equals FRR", "target": 0.001 },
    "fte": { "name": "Failure To Enroll", "description": "Rate of enrollment failures", "target": 0.005 },
    "fta": { "name": "Failure To Acquire", "description": "Rate of sample acquisition failures", "target": 0.01 }
  }
}
