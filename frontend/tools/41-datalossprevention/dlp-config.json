{
  "toolInfo": {
    "id": 41,
    "name": "DataLossPrevention",
    "displayName": "DLP Shield - Data Loss Prevention",
    "description": "AI-powered data loss prevention platform with content inspection, policy enforcement, user behavior analytics, and regulatory compliance for protecting sensitive data",
    "category": "Data Security",
    "version": "1.0.0",
    "icon": "üõ°Ô∏è",
    "color": "#ef4444",
    "theme": "red"
  },
  "deployment": {
    "subdomain": "dlp",
    "domain": "maula.ai",
    "fullUrl": "https://dlp.maula.ai",
    "aiAssistantUrl": "https://dlp.maula.ai/maula/ai"
  },
  "ports": {
    "frontend": 3041,
    "backend": 4041,
    "aiWebSocket": 6041,
    "contentInspection": 8441,
    "emailGateway": 2525
  },
  "database": {
    "name": "dlp_db",
    "collections": [
      "policies",
      "incidents",
      "data_patterns",
      "user_activities",
      "classifications",
      "endpoints",
      "channels",
      "exemptions",
      "audit_logs",
      "reports"
    ]
  },
  "features": {
    "contentInspection": {
      "enabled": true,
      "ocr": true,
      "nlpAnalysis": true,
      "fingerprinting": true,
      "exactMatch": true,
      "regexPatterns": true
    },
    "channels": {
      "email": true,
      "web": true,
      "cloud": true,
      "endpoint": true,
      "network": true,
      "removableMedia": true
    },
    "classification": {
      "enabled": true,
      "autoClassification": true,
      "userLabeling": true,
      "sensitivityLabels": ["public", "internal", "confidential", "restricted", "top-secret"],
      "mlClassification": true
    },
    "userBehaviorAnalytics": {
      "enabled": true,
      "anomalyDetection": true,
      "riskScoring": true,
      "insiderThreat": true,
      "baseline": true
    },
    "incidentResponse": {
      "enabled": true,
      "autoBlock": true,
      "quarantine": true,
      "encrypt": true,
      "notify": true,
      "workflow": true
    }
  },
  "aiAssistant": {
    "enabled": true,
    "model": "gemini-1.5-pro",
    "wsPort": 6041,
    "functions": [
      {
        "name": "analyze_content",
        "description": "Analyze content for sensitive data including PII, PHI, PCI, and custom patterns",
        "parameters": {
          "content": "string",
          "contentType": "string",
          "checkPatterns": "array",
          "includeContext": "boolean"
        },
        "category": "Analysis"
      },
      {
        "name": "investigate_incident",
        "description": "Investigate a DLP incident with full context, user history, and policy details",
        "parameters": {
          "incidentId": "string",
          "includeUserHistory": "boolean",
          "correlateEvents": "boolean",
          "generateTimeline": "boolean"
        },
        "category": "Investigation"
      },
      {
        "name": "assess_user_risk",
        "description": "Assess user data handling risk based on behavior patterns and incident history",
        "parameters": {
          "userId": "string",
          "timeRange": "string",
          "includeBaseline": "boolean",
          "insiderThreatScore": "boolean"
        },
        "category": "Risk Assessment"
      },
      {
        "name": "create_policy",
        "description": "Create a DLP policy with detection rules, conditions, and response actions",
        "parameters": {
          "policyName": "string",
          "dataTypes": "array",
          "channels": "array",
          "responseActions": "object"
        },
        "category": "Policy Management"
      },
      {
        "name": "classify_data",
        "description": "Classify data repositories and files based on sensitivity and content analysis",
        "parameters": {
          "targetPath": "string",
          "classificationScheme": "string",
          "deepScan": "boolean",
          "applyLabels": "boolean"
        },
        "category": "Classification"
      },
      {
        "name": "detect_exfiltration",
        "description": "Detect potential data exfiltration attempts and suspicious transfer patterns",
        "parameters": {
          "timeRange": "string",
          "channels": "array",
          "volumeThreshold": "number",
          "includeAnomalies": "boolean"
        },
        "category": "Detection"
      },
      {
        "name": "audit_compliance",
        "description": "Audit data handling compliance against regulatory requirements",
        "parameters": {
          "regulation": "string",
          "scope": "array",
          "includeRemediation": "boolean",
          "generateEvidence": "boolean"
        },
        "category": "Compliance"
      },
      {
        "name": "discover_sensitive_data",
        "description": "Discover and inventory sensitive data across endpoints, cloud, and repositories",
        "parameters": {
          "targets": "array",
          "dataTypes": "array",
          "scanDepth": "string",
          "classifyResults": "boolean"
        },
        "category": "Discovery"
      },
      {
        "name": "generate_report",
        "description": "Generate DLP reports including incidents, trends, and executive summaries",
        "parameters": {
          "reportType": "string",
          "startDate": "string",
          "endDate": "string",
          "includeRecommendations": "boolean"
        },
        "category": "Reporting"
      },
      {
        "name": "remediate_exposure",
        "description": "Remediate data exposure by applying encryption, access controls, or removal",
        "parameters": {
          "exposureId": "string",
          "remediationAction": "string",
          "notifyOwner": "boolean",
          "documentAction": "boolean"
        },
        "category": "Remediation"
      }
    ]
  },
  "integrations": {
    "cloudStorage": ["sharepoint", "onedrive", "google-drive", "dropbox", "box"],
    "email": ["microsoft-365", "google-workspace", "proofpoint", "mimecast"],
    "casb": ["mcafee-mvision", "netskope", "zscaler"],
    "siem": ["splunk", "sentinel", "chronicle"],
    "idp": ["azure-ad", "okta", "ping"]
  },
  "security": {
    "encryption": {
      "atRest": true,
      "inTransit": true,
      "algorithm": "AES-256-GCM"
    },
    "dataHandling": {
      "redaction": true,
      "tokenization": true,
      "masking": true
    },
    "authentication": {
      "mfa": true,
      "sso": true,
      "rbac": true
    }
  },
  "performance": {
    "maxFileSizeMB": 500,
    "maxDailyScans": 10000000,
    "realtimeInspection": true,
    "averageLatency": "< 100ms"
  },
  "compliance": {
    "regulations": ["GDPR", "CCPA", "HIPAA", "PCI-DSS", "SOX", "GLBA", "FERPA"],
    "dataTypes": ["PII", "PHI", "PCI", "Financial", "Legal", "IP"],
    "auditRetention": 730
  }
}
