# ============================================
# VICTORYKIT ENVIRONMENT CONFIGURATION
# ============================================
# Copy to .env and fill in real values
# NEVER commit .env to git!
# ============================================

# ===================
# AWS (Required for S3 storage)
# Get from: https://console.aws.amazon.com/iam/
# ===================
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=victorykit

# ===================
# MONGODB ATLAS (Required)
# Get from: MongoDB Atlas > Connect > Drivers
# ===================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?appName=victorykit
MONGODB_DB=victorykit

# ===================
# JWT AUTHENTICATION (Required)
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
# ===================
JWT_SECRET=generate-64-char-hex-secret-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ===================
# STRIPE PAYMENTS (Required for tool purchases)
# Get from: https://dashboard.stripe.com/apikeys
# ===================
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Pricing
TOOL_PRICE_CENTS=100
TOOL_ACCESS_HOURS=24

# ===================
# ENVIRONMENT
# ===================
NODE_ENV=production
CORS_ORIGIN=https://victorykit.com
API_BASE_URL=https://api.victorykit.com

# ===================
# PORTS (defaults work, customize if needed)
# ===================
PORT_AUTH=5000
PORT_GATEWAY=4000
PORT_MALWAREHUNTER=4004
PORT_PHISHGUARD=4005
PORT_VULNSCAN=4006

# ===================
# OPTIONAL - Add later
# ===================
