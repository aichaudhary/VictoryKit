# Phase 2 Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# FraudGuard Services
# =============================================================================

# MongoDB
MONGODB_URI=mongodb://localhost:27017/fraudguard_db

# JWT Secret (generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# =============================================================================
# LLM Provider API Keys (AI Assistant)
# At least one provider is required for AI chat functionality
# =============================================================================

# Google Gemini
GEMINI_API_KEY=

# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI GPT
OPENAI_API_KEY=

# xAI Grok
XAI_API_KEY=

# Mistral AI
MISTRAL_API_KEY=

# Together AI (for Llama)
TOGETHER_API_KEY=

# =============================================================================
# Service URLs (for Docker networking)
# =============================================================================

FRAUDGUARD_API_URL=http://fraudguard-api:4001
ML_ENGINE_URL=http://fraudguard-ml:8001
AI_ASSISTANT_URL=ws://fraudguard-ai:6001

# =============================================================================
# Optional Configuration
# =============================================================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:3001,https://fguard.maula.ai
